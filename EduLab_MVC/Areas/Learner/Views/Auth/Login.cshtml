@model EduLab_MVC.Models.DTOs.Auth.LoginRequestDTO
@{
    ViewData["Title"] = "تسجيل الدخول";
}
<link rel="stylesheet" href="~/css/Auth.css">

<div class="flex justify-center items-center min-h-screen py-8">
    <div class="w-full max-w-md mx-4">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden p-8">
            <div class="text-center mb-6">
                <i class="fas fa-graduation-cap text-blue-600 dark:text-blue-400 text-3xl mb-4"></i>
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white">تسجيل الدخول</h2>
            </div>

            <form asp-action="Login" method="post" id="loginForm">

                <div class="mb-4">
                    <label asp-for="Email" class="block text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="example@edulab.com">
                    <span asp-validation-for="Email" class="text-red-600"></span>
                </div>

                <div class="mb-6 relative">
                    <label asp-for="Password" class="block text-gray-700 dark:text-gray-300 mb-2"></label>
                    <div class="relative">
                        <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white pr-10" placeholder="********">
                        <button type="button" id="toggle-password" class="absolute inset-y-0 left-0 px-3 flex items-center text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
                            <i class="fas fa-eye-slash" id="password-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-600"></span>
                </div>

                <button type="submit" id="loginBtn" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition mb-4">تسجيل الدخول</button>

                <div class="flex items-center my-6">
                    <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
                    <span class="mx-4 text-gray-500 dark:text-gray-400">أو</span>
                    <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
                </div>

                <!-- Social Login Buttons -->
                <div class="flex flex-col space-y-3 mb-6">
                    <a href="#" class="bg-red-600 hover:bg-red-900 text-white py-2 px-4 rounded-lg flex items-center justify-center transition">
                        <i class="fab fa-google mr-2"></i> تسجيل الدخول بجوجل
                    </a>
                    <a href="#" class="bg-blue-800 hover:bg-blue-900 text-white py-2 px-4 rounded-lg flex items-center justify-center transition">
                        <i class="fab fa-facebook-f mr-2"></i> تسجيل الدخول بفيسبوك
                    </a>
                </div>

                <div class="text-center">
                    <a asp-controller="Auth" asp-action="Register" class="text-blue-600 dark:text-blue-400 hover:underline">ليس لديك حساب؟ سجل الآن</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Auth.js"></script>
}