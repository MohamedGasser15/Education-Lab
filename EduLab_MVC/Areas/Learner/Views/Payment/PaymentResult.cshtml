@{
    ViewData["Title"] = "Payment Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 text-center">
    @if (ViewBag.Success)
    {
        <div class="alert alert-success">
            <h2>Payment Successful!</h2>
            <p>Thank you for your purchase. Your courses have been added to your account.</p>
        </div>
        <a href="@Url.Action("Index", "MyCourses")" class="btn btn-primary">View My Courses</a>
    }
    else
    {
        <div class="alert alert-danger">
            <h2>Payment Failed</h2>
            <p>@ViewBag.Message</p>
        </div>
        <a asp-action="Checkout" asp-controller="Payment" asp-area="Learner" href="@Url.Action("Checkout", "Payment")" class="btn btn-primary">Try Again</a>
    }
</div>