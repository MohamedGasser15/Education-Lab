@using EduLab_MVC.Services.ServiceInterfaces
@using EduLab_Shared.Utitlites
@inject IUserService _userService
@{
    var user = await _userService.GetCurrentUserAsync();
    var token = Context.Request.Cookies["AuthToken"];
    var isLoggedIn = !string.IsNullOrEmpty(token);
    var fullName = user?.FullName;
    var role = user?.Role;
    var profileImage = user?.ProfileImageUrl;

    if (!string.IsNullOrEmpty(profileImage) && !profileImage.StartsWith("http"))
    {
        var baseUrl = "https://localhost:7292/";
        profileImage = baseUrl.TrimEnd('/') + "/" + profileImage.TrimStart('/');
    }
}
@if (isLoggedIn)
{
    <!-- User Profile Dropdown -->
    <div class="relative dropdown">
        <button class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full overflow-hidden">
                <img src="@(string.IsNullOrEmpty(profileImage) ? Url.Content("~/img/User Logo.png") : profileImage)"
                     class="w-full h-full object-cover" alt="User">
            </div>
            <span class="text-gray-700 dark:text-gray-300 font-medium">@fullName</span>
            <i class="fas fa-chevron-down text-gray-500 dark:text-gray-400 text-xs"></i>
        </button>
        <div class="dropdown-content bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 mt-2 w-48">
            <div class="py-1">
                @if (role == SD.Admin)
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-tachometer-alt ml-2"></i> لوحة التحكم
                    </a>
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                }
                else if (role == SD.Instructor)
                {
                    <a href="/Instructor/Dashboard/Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-chalkboard-teacher ml-2"></i> لوحة تحكم المدرس
                    </a>
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Instructor" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                }
                else if (role == SD.Student)
                {
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                    <a asp-area="Learner"
                       asp-controller="InstructorApplication"
                       asp-action="Apply"
                       class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-file-signature ml-2"></i> تقديم طلب كمدرب
                    </a>
                }
                @if (role == SD.InstructorPending)
                {
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                    <a asp-area="Learner"
                       asp-controller="InstructorApplication"
                       asp-action="MyApplications"
                       class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="fas fa-file-alt ml-2"></i> متابعة طلب الانضمام
                    </a>
                }
                <a asp-controller="Home" asp-action="MyCourses" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="fas fa-book ml-2"></i> دوراتي
                </a>
                <div class="border-t border-gray-200 dark:border-gray-700"></div>
                <a asp-controller="Settings" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="fas fa-cog ml-2"></i> الإعدادات
                </a>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="block">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="block px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 w-full text-right">
                        <i class="fas fa-sign-out-alt ml-2"></i> تسجيل الخروج
                    </button>
                </form>
            </div>
        </div>
    </div>
    <!-- Mobile Menu -->
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 shadow-lg">
        <div class="container mx-auto px-4 py-3 flex flex-col space-y-3">
            <!-- User Info -->
            <!-- User Info - Enhanced with larger image -->
            <div class="flex items-center space-x-4 space-x-reverse pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="w-16 h-16 rounded-full overflow-hidden ring-4 ring-blue-100 dark:ring-gray-700 shadow-lg">
                    <img src="@(string.IsNullOrEmpty(profileImage) ? Url.Content("~/img/User Logo.png") : profileImage)"
                         class="w-full h-full object-cover" alt="User">
                </div>
                <div>
                    <p class="font-bold text-lg text-gray-800 dark:text-white">@fullName</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">@role</p>
                </div>
            </div>

            <!-- نفس اللينكات بتاعت الدروب داون -->
            <div class="flex flex-col space-y-2">
                @if (role == SD.Admin)
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-tachometer-alt ml-2"></i> لوحة التحكم
                    </a>
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                }
                else if (role == SD.Instructor)
                {
                    <a href="/Instructor/Dashboard/Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-chalkboard-teacher ml-2"></i> لوحة تحكم المدرس
                    </a>
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Instructor" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                }
                else if (role == SD.Student)
                {
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                    <a asp-area="Learner" asp-controller="InstructorApplication" asp-action="Apply" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-file-signature ml-2"></i> تقديم طلب كمدرب
                    </a>
                }
                @if (role == SD.InstructorPending)
                {
                    <a asp-area="Learner" asp-controller="Profile" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-user ml-2"></i> الملف الشخصي
                    </a>
                    <a asp-area="Learner" asp-controller="InstructorApplication" asp-action="MyApplications" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-file-alt ml-2"></i> متابعة طلب الانضمام
                    </a>
                }
                <a asp-controller="Home" asp-action="MyCourses" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                    <i class="fas fa-book ml-2"></i> دوراتي
                </a>

                <!-- Divider -->
                <div class="border-t border-gray-200 dark:border-gray-700"></div>

                <a asp-controller="Settings" asp-action="Index" class="flex items-center px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                    <i class="fas fa-cog ml-2"></i> الإعدادات
                </a>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="block">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="flex items-center w-full px-4 py-2 text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                        <i class="fas fa-sign-out-alt ml-2"></i> تسجيل الخروج
                    </button>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <a asp-controller="Auth" asp-action="Login" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition">تسجيل الدخول</a>
    <a asp-controller="Auth" asp-action="Register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition transform hover:scale-105">إنشاء حساب</a>
    <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 shadow-lg">
        <div class="container mx-auto px-4 py-3 flex flex-col space-y-3">
            <a asp-controller="Auth" asp-action="Login" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 py-3 px-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition flex items-center">
                <i class="fas fa-sign-in-alt ml-2"></i>
                تسجيل الدخول
            </a>
            <a asp-controller="Auth" asp-action="Register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg transition transform hover:scale-[1.02] flex items-center justify-center">
                <i class="fas fa-user-plus ml-2"></i>
                إنشاء حساب
            </a>
            <div class="pt-2 border-t border-gray-200 dark:border-gray-700">
                <a href="#" class="block text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 py-2 px-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition">الشروط والأحكام</a>
                <a href="#" class="block text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 py-2 px-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition">الخصوصية</a>
                <a href="#" class="block text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 py-2 px-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition">اتصل بنا</a>
            </div>
        </div>
    </div>
}