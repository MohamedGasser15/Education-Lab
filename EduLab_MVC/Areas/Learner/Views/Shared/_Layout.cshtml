    <script>
        // إدارة القائمة الجانبية للهواتف المحمولة
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const closeSidebar = document.getElementById('close-sidebar');
            const mobileSidebar = document.getElementById('mobile-sidebar');
            const overlay = document.getElementById('overlay');
            const mobileMenuContent = document.getElementById('mobile-menu-content');

            // نسخ محتوى القائمة المحمولة إلى الشريط الجانبي
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu && mobileMenuContent) {
                mobileMenuContent.innerHTML = mobileMenu.innerHTML;
                mobileMenu.remove(); // إزالة القائمة الأصلية من DOM
            }

            // فتح القائمة الجانبية
            if (mobileMenuButton && mobileSidebar && overlay) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileSidebar.classList.add('open');
                    overlay.classList.add('active');
                    document.body.style.overflow = 'hidden'; // منع التمرير عند فتح القائمة
                });
            }

            // إغلاق القائمة الجانبية
            if (closeSidebar && mobileSidebar && overlay) {
                closeSidebar.addEventListener('click', function() {
                    mobileSidebar.classList.remove('open');
                    overlay.classList.remove('active');
                    document.body.style.overflow = ''; // إعادة التمرير
                });
            }

            // إغلاق القائمة الجانبية عند النقر على الـ overlay
            if (overlay && mobileSidebar) {
                overlay.addEventListener('click', function() {
                    mobileSidebar.classList.remove('open');
                    overlay.classList.remove('active');
                    document.body.style.overflow = ''; // إعادة التمرير
                });
            }
        });

        let loadingScreen = document.getElementById('loading-screen');
        let loadingBar = document.getElementById('loading-bar');
        let percentElement = document.getElementById('loading-percent');
        let percent = 0;
        let resourcesLoaded = 0;
        let totalResources = 0;
        let loadingTimeout;
        let pageLoaded = false;

        function calculateResources() {
            const resources = document.querySelectorAll('img, script, link[rel="stylesheet"], iframe, video, audio');
            totalResources = resources.length;
            return totalResources;
        }

        function updateProgress() {
            percent = Math.min(Math.round((resourcesLoaded / totalResources) * 100), 100);
            percentElement.textContent = percent + '%';
            loadingBar.style.width = percent + '%';
        }

        loadingTimeout = setTimeout(() => {
            if (!pageLoaded) {
                loadingScreen.style.opacity = '1';
                calculateResources();

                document.querySelectorAll('img, iframe, video, audio').forEach(resource => {
                    resource.addEventListener('load', () => {
                        resourcesLoaded++;
                        updateProgress();
                    });
                    resource.addEventListener('error', () => {
                        resourcesLoaded++;
                        updateProgress();
                    });
                });

                const fallbackInterval = setInterval(() => {
                    if (percent < 90) {
                        percent = Math.min(percent + 1, 90);
                        percentElement.textContent = percent + '%';
                        loadingBar.style.width = percent + '%';
                    }
                    if (pageLoaded) clearInterval(fallbackInterval);
                }, 200);
            }
        }, 500);

        window.addEventListener('load', function() {
            pageLoaded = true;
            clearTimeout(loadingTimeout);

            percent = 100;
            percentElement.textContent = percent + '%';
            loadingBar.style.width = percent + '%';

            setTimeout(() => {
                loadingScreen.style.opacity = '0';
                setTimeout(() => {
                    loadingScreen.style.display = 'none';
                }, 300);
            }, 500);
        });

        if (document.readyState === 'complete') {
            loadingScreen.style.display = 'none';
            clearTimeout(loadingTimeout);
        }
    </script>
    <script>
        // نظام عرض الرسائل المحسن
        document.addEventListener('DOMContentLoaded', function() {
            // معالجة رسائل TempData من الخادم
            @if (TempData["SuccessMessage"] != null)
            {
                        <text>showAlert('success', '@Html.Raw(TempData["SuccessMessage"])');</text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                        <text>showAlert('error', '@Html.Raw(TempData["ErrorMessage"])');</text>
            }
        });

        // دالة لعرض الرسائل
        function showAlert(type, message, duration = 5000) {
            const alertContainer = document.getElementById('alert-container');
            if (!alertContainer) return;

            const alertElement = document.createElement('div');
            alertElement.className = `alert alert-${type}`;
            alertElement.setAttribute('role', 'alert');

            // تحديد الأيقونة المناسبة حسب نوع الرسالة
            let icon = '';
            switch(type) {
                case 'success':
                    icon = 'fa-check-circle';
                    break;
                case 'error':
                    icon = 'fa-exclamation-circle';
                    break;
                case 'info':
                    icon = 'fa-info-circle';
                    break;
                case 'warning':
                    icon = 'fa-exclamation-triangle';
                    break;
                default:
                    icon = 'fa-info-circle';
            }

            alertElement.innerHTML = `
                <i class="fas ${icon} alert-icon"></i>
                <div class="alert-content">${message}</div>
                <button class="alert-close" onclick="closeAlert(this.parentElement)">
                    <i class="fas fa-times"></i>
                </button>
                <div class="alert-progress">
                    <div class="alert-progress-bar"></div>
                </div>
            `;

            alertContainer.appendChild(alertElement);

            // إظهار الرسالة مع تأثير
            setTimeout(() => {
                alertElement.classList.add('show');

                // بدء تحريك شريط التقدم
                const progressBar = alertElement.querySelector('.alert-progress-bar');
                if (progressBar) {
                    // تهيئة الشريط بالكامل أولاً
                    progressBar.style.width = '100%';

                    // ثم بدء التحريك بعد تأخير بسيط
                    setTimeout(() => {
                        progressBar.style.transition = `width ${duration}ms linear`;
                        progressBar.style.width = '0%';
                    }, 50);
                }
            }, 10);

            // إخفاء تلقائي بعد المدة المحددة
            const autoHide = setTimeout(() => {
                closeAlert(alertElement);
            }, duration);

            // إيقاف العد التنازلي عند التمرير فوق الرسالة
            alertElement.addEventListener('mouseenter', () => {
                clearTimeout(autoHide);
                const progressBar = alertElement.querySelector('.alert-progress-bar');
                if (progressBar) {
                    progressBar.style.transition = 'none';
                    const currentWidth = parseFloat(getComputedStyle(progressBar).width);
                    progressBar.dataset.currentWidth = currentWidth;
                }
            });

            // استئناف العد التنازلي عند مغادرة الرسالة
            alertElement.addEventListener('mouseleave', () => {
                const progressBar = alertElement.querySelector('.alert-progress-bar');
                if (progressBar) {
                    const currentWidth = parseFloat(progressBar.dataset.currentWidth || '100');
                    const remainingTime = (currentWidth / 100) * duration;

                    progressBar.style.transition = `width ${remainingTime}ms linear`;
                    progressBar.style.width = '0%';

                    setTimeout(() => {
                        closeAlert(alertElement);
                    }, remainingTime);
                }
            });
        }

        // دالة لإغلاق الرسالة
        function closeAlert(alertElement) {
            if (!alertElement) return;

            alertElement.classList.remove('show');
            alertElement.classList.add('hide');

            setTimeout(() => {
                if (alertElement.parentNode) {
                    alertElement.parentNode.removeChild(alertElement);
                }
            }, 400);
        }

        // دوال مساعدة للأنواع المختلفة من الرسائل
        function showSuccess(message, duration) {
            showAlert('success', message, duration);
        }

        function showError(message, duration) {
            showAlert('error', message, duration);
        }

        function showInfo(message, duration) {
            showAlert('info', message, duration);
        }

        function showWarning(message, duration) {
            showAlert('warning', message, duration);
        }

        // جعل الدوال متاحة عالمياً
        window.showAlert = showAlert;
        window.showSuccess = showSuccess;
        window.showError = showError;
        window.showInfo = showInfo;
        window.showWarning = showWarning;
        window.closeAlert = closeAlert;
    </script>

