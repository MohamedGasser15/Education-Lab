            max-width: 100%;
            height: auto;
        }
    </style>
    <style>
        /* نظام الرسائل المحسن */
        .alert-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 10000;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 10px;
        }
        /* تحسينات للبحث في الموبايل */
        #mobile-search {
            transition: all 0.3s ease-in-out;
        }

            #mobile-search.hidden {
                display: none;
            }

            #mobile-search:not(.hidden) {
                display: block;
                animation: slideDown 0.3s ease-in-out;
            }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert {
            position: relative;
            width: 320px;
            padding: 16px 20px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            opacity: 0;
            transform: translateX(50px);
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            overflow: hidden;
            font-size: 0.95rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

            .alert.show {
                opacity: 1;
                transform: translateX(0);
            }

            .alert.hide {
                opacity: 0;
                transform: translateX(50px);
            }

        .alert-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .alert-error {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .alert-info {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .alert-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .alert-icon {
            margin-left: 12px;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .alert-content {
            flex-grow: 1;
            line-height: 1.5;
            padding-right: 8px;
            font-weight: 500;
        }

        .alert-close {
            background: none;
            border: none;
            cursor: pointer;
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.2s;
            flex-shrink: 0;
            font-size: 1rem;
            padding: 4px;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .alert-close:hover {
                color: white;
                background: rgba(255, 255, 255, 0.2);
            }

        .alert-progress {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 3px;
            background-color: rgba(255, 255, 255, 0.3);
            width: 100%;
            border-radius: 0 0 12px 12px;
            overflow: hidden;
        }

        .alert-progress-bar {
            height: 100%;
            width: 100%;
            transition: width linear;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 0 0 12px 12px;
        }

        /* دعم الوضع الداكن */
        .dark .alert {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            border-color: rgba(255, 255, 255, 0.05);
        }

        /* تصميم متجاوب */
        @@media (max-width: 640px) {
            .alert-container {
                width: calc(100% - 40px);
                right: 20px;
                top: 15px;
            }

            .alert {
                width: 100%;
                max-width: 100%;
            }
        }
    </style>
</head>
