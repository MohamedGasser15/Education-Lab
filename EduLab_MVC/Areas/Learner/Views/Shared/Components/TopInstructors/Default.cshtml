@model List<EduLab_MVC.Models.DTOs.Instructor.InstructorDTO>

@if (Model != null && Model.Any())
{
    @foreach (var instructor in Model)
    {
        <div class="relative group overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 instructor-card-1 scroll-animate">
            <div class="absolute inset-0 bg-gradient-to-br from-[var(--instructor-color)] to-[var(--instructor-dark)] opacity-90 group-hover:opacity-100 transition-all duration-500 -skew-y-6 origin-top-left transform scale-105"></div>
            <div class="relative z-10 p-6 h-full flex flex-col">
                <div class="mb-4 overflow-hidden rounded-full border-4 border-white shadow-lg w-32 h-32 mx-auto transform group-hover:scale-110 transition-all duration-500">
                    <img src="@instructor.ProfileImageUrl"
                         alt="@instructor.FullName"
                         class="w-full h-full object-cover">
                </div>
                <h3 class="text-2xl font-bold text-white text-center mb-1">@instructor.FullName</h3>
                <p class="text-blue-100 text-center mb-4">@instructor.Title</p>

                <div class="flex justify-center gap-1 mb-4">
                    <i class="fas fa-star text-yellow-300"></i>
                    <i class="fas fa-star text-yellow-300"></i>
                    <i class="fas fa-star text-yellow-300"></i>
                    <i class="fas fa-star text-yellow-300"></i>
                    <i class="fas fa-star text-yellow-300"></i>
                </div>

                <p class="text-white/90 text-sm text-center mb-6 flex-grow">
                    @instructor.About
                </p>

                <div class="flex justify-center space-x-3 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300">

                    @if (!string.IsNullOrEmpty(instructor.FacebookUrl))
                    {
                        <a href="@instructor.FacebookUrl" target="_blank"
                           class="w-10 h-10 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition ml-3">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    }

                    @if (!string.IsNullOrEmpty(instructor.TwitterUrl))
                    {
                        <a href="@instructor.TwitterUrl" target="_blank"
                           class="w-10 h-10 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition ml-3">
                            <i class="fab fa-twitter"></i>
                        </a>
                    }

                    @if (!string.IsNullOrEmpty(instructor.LinkedInUrl))
                    {
                        <a href="@instructor.LinkedInUrl" target="_blank"
                           class="w-10 h-10 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition ml-3">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    }

                    @if (!string.IsNullOrEmpty(instructor.GitHubUrl))
                    {
                        <a href="@instructor.GitHubUrl" target="_blank"
                           class="w-10 h-10 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition">
                            <i class="fab fa-github"></i>
                        </a>
                    }

                </div>


            </div>
        </div>
    }
}
