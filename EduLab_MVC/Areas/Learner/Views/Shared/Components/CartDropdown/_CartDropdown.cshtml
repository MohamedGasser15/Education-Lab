@model EduLab_MVC.Models.DTOs.Cart.CartDto

<div class="relative dropdown">
    <a asp-area="Learner" asp-controller="Cart" asp-action="Index" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition relative">
        <i class="fas fa-shopping-cart text-xl"></i>
<span data-cart-count
      class="absolute top-[-5px] right-0 bg-blue-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
    @(Model?.Items?.Count() ?? 0)
</span>

    </a>

    <div class="dropdown-content bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 mt-2 w-72 overflow-hidden">
        <div class="p-3 border-b border-gray-200 dark:border-gray-700 flex items-center gap-2">
            <i class="fas fa-shopping-cart text-blue-600 dark:text-blue-400"></i>
            <h3 class="font-semibold text-gray-800 dark:text-white text-sm">عربة التسوق</h3>
        </div>

        <div class="max-h-60 overflow-y-auto">
            @if (Model?.Items != null && Model.Items.Any())
            {
                var itemsToShow = Model.Items.Take(2).ToList();

                foreach (var item in itemsToShow)
                {
                    <a asp-area="Learner" asp-controller="Cart" asp-action="Index" class="flex items-center gap-3 px-3 py-2 hover:bg-gray-100 dark:hover:bg-gray-700 border-b border-gray-100 dark:border-gray-700 transition">
                        <img src="@item.ThumbnailUrl"
                             class="w-12 h-12 rounded-lg object-cover border border-gray-200 dark:border-gray-600 shadow-sm"
                             alt="@item.CourseTitle">
                        <div class="flex flex-col">
                            <p class="text-sm font-medium text-gray-800 dark:text-white line-clamp-1">@item.CourseTitle</p>
                            <p class="text-xs font-semibold text-blue-600 dark:text-blue-400">@item.CoursePrice ج.م</p>
                        </div>
                    </a>
                }

                if (Model.Items.Count() > 2)
                {
                    <a asp-area="Learner" asp-controller="Cart" asp-action="Index"
                       class="block text-center text-xs text-blue-600 dark:text-blue-400 py-2 hover:underline">
                        ...عرض باقي العناصر →
                    </a>
                }
            }
            else
            {
                <p class="text-sm text-gray-500 dark:text-gray-400 p-3 text-center">لا توجد عناصر في السلة</p>
            }
        </div>

        @if (Model?.Items != null && Model.Items.Any())
        {
            <div class="p-3 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
                <div class="flex justify-between mb-2 text-sm">
                    <span class="dark:text-gray-300">المجموع:</span>
                    <span class="font-bold text-gray-800 dark:text-white">@(Model?.TotalPrice ?? 0) ج.م</span>
                </div>
                <a asp-area="Learner" asp-controller="Cart" asp-action="Index"
                   class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-lg transition font-medium shadow-sm">
                    اتمام الشراء
                </a>
            </div>
        }
    </div>
</div>
