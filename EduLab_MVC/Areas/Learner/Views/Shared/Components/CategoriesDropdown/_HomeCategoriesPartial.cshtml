@model List<EduLab_MVC.Models.DTOs.Category.CategoryDTO>

<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
    @foreach (var category in Model)
    {
        var colorClass = GetCategoryColorClass(category.Category_Name);
        var iconClass = GetCategoryIcon(category.Category_Name);

        <a href="@Url.Action("ByCategory", "Course", new { id = category.Category_Id })" class="category-card group">
            <div class="bg-@(colorClass)-50 dark:bg-gray-800 rounded-xl p-6 text-center transition-all hover:bg-@(colorClass)-100 dark:hover:bg-gray-700 h-full">
                <div class="w-16 h-16 bg-@(colorClass)-100 dark:bg-@(colorClass)-900 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-@(colorClass)-200 dark:group-hover:bg-@(colorClass)-800">
                    <i class="fas @iconClass text-@(colorClass)-600 dark:text-@(colorClass)-400 text-2xl"></i>
                </div>
                <h3 class="font-semibold text-gray-800 dark:text-white">@category.Category_Name</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">@category.CoursesCount دورة</p>
            </div>
        </a>
    }
</div>

