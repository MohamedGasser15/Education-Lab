@{
    ViewData["Title"] = "عربة التسوق - EduLab";
}

<div class="max-w-6xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-8">عربة التسوق</h1>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                <!-- Cart Header -->
                <div class="bg-gray-100 dark:bg-gray-700 px-6 py-4 border-b border-gray-200 dark:border-gray-600">
                    <div class="flex justify-between items-center">
                        <h2 class="text-lg font-semibold text-gray-800 dark:text-white">الدورات المضافة</h2>
                        <span class="text-sm text-gray-600 dark:text-gray-300">3 عناصر</span>
                    </div>
                </div>

                <!-- Cart Items List -->
                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    <!-- Item 1 -->
                    <div class="p-6 flex flex-col sm:flex-row gap-4">
                        <div class="flex-shrink-0">
                            <img src="https://via.placeholder.com/120" alt="Course Image" class="w-24 h-24 rounded-lg object-cover">
                        </div>
                        <div class="flex-grow">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">دورة تطوير الويب المتكاملة</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">مع المدرب: أحمد محمد</p>
                                </div>
                                <button class="text-red-500 hover:text-red-700 dark:hover:text-red-400">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            <div class="mt-4 flex justify-between items-center">
                                <div class="flex items-center">
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="mx-2 text-gray-700 dark:text-gray-300">1</span>
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <span class="text-lg font-semibold text-blue-600 dark:text-blue-400">250 ج.م</span>
                            </div>
                        </div>
                    </div>

                    <!-- Item 2 -->
                    <div class="p-6 flex flex-col sm:flex-row gap-4">
                        <div class="flex-shrink-0">
                            <img src="https://via.placeholder.com/120" alt="Course Image" class="w-24 h-24 rounded-lg object-cover">
                        </div>
                        <div class="flex-grow">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">دورة Python للمبتدئين</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">مع المدرب: محمد علي</p>
                                </div>
                                <button class="text-red-500 hover:text-red-700 dark:hover:text-red-400">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            <div class="mt-4 flex justify-between items-center">
                                <div class="flex items-center">
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="mx-2 text-gray-700 dark:text-gray-300">1</span>
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <span class="text-lg font-semibold text-blue-600 dark:text-blue-400">200 ج.م</span>
                            </div>
                        </div>
                    </div>

                    <!-- Item 3 -->
                    <div class="p-6 flex flex-col sm:flex-row gap-4">
                        <div class="flex-shrink-0">
                            <img src="https://via.placeholder.com/120" alt="Course Image" class="w-24 h-24 rounded-lg object-cover">
                        </div>
                        <div class="flex-grow">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-medium text-gray-800 dark:text-white">دورة تصميم UI/UX</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">مع المدربة: سارة أحمد</p>
                                </div>
                                <button class="text-red-500 hover:text-red-700 dark:hover:text-red-400">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            <div class="mt-4 flex justify-between items-center">
                                <div class="flex items-center">
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="mx-2 text-gray-700 dark:text-gray-300">1</span>
                                    <button class="text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 p-2">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <span class="text-lg font-semibold text-blue-600 dark:text-blue-400">180 ج.م</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Coupon Code -->
                <div class="p-6 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex flex-col sm:flex-row gap-3">
                        <input type="text" placeholder="كود الخصم"
                               class="flex-grow px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                        <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition">
                            تطبيق الكود
                        </button>
                    </div>
                </div>
            </div>

            <!-- Continue Shopping Button -->
            <div class="mt-6">
                <a href="/courses" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                    <i class="fas fa-arrow-right ml-2"></i>
                    الاستمرار في التسوق
                </a>
            </div>
        </div>
            
        <!-- Order Summary -->
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 sticky top-24">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">ملخص الطلب</h2>

                <div class="space-y-4">
                    <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">المجموع الفرعي</span>
                        <span class="text-gray-800 dark:text-white">630 ج.م</span>
                    </div>

                    <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">الخصم</span>
                        <span class="text-green-600 dark:text-green-400">-30 ج.م</span>
                    </div>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <div class="flex justify-between">
                            <span class="font-semibold text-gray-800 dark:text-white">المجموع الكلي</span>
                            <span class="font-bold text-blue-600 dark:text-blue-400">600 ج.م</span>
                        </div>
                    </div>

                    <div class="pt-4">
                        <a asp-controller="Home" asp-action="Checkout" class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-3 rounded-lg transition font-medium">
                            إتمام الشراء
                        </a>
                    </div>

                    <div class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4">
                        <p>أو استخدم</p>
                        <div class="flex justify-center mt-2 space-x-3 space-x-reverse">
                            <button class="bg-gray-100 dark:bg-gray-700 p-2 rounded-lg">
                                <i class="fab fa-cc-paypal text-blue-600"></i>
                            </button>
                            <button class="bg-gray-100 dark:bg-gray-700 p-2 rounded-lg">
                                <i class="fab fa-cc-visa text-blue-800"></i>
                            </button>
                            <button class="bg-gray-100 dark:bg-gray-700 p-2 rounded-lg">
                                <i class="fab fa-cc-mastercard text-red-600"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>