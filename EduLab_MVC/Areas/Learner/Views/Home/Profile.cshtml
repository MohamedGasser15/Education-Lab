                        <input type="text" value="linkedin.com/in/username" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" placeholder="رابط LinkedIn">
                    </div>
                    <div class="flex items-center">
                        <i class="fab fa-twitter text-xl ml-3 w-6 text-center text-gray-600 dark:text-gray-300"></i>
                        <input type="text" value="twitter.com/username" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" placeholder="رابط Twitter">
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-globe text-xl ml-3 w-6 text-center text-gray-600 dark:text-gray-300"></i>
                        <input type="text" value="mywebsite.com" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" placeholder="رابط الموقع الشخصي">
                    </div>
                </div>
                <div class="flex justify-end space-x-3 space-x-reverse">
                    <button type="button" onclick="closeModal('edit-social-modal')" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                        إلغاء
                    </button>
                    <button type="button" onclick="saveSocial()" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
                        حفظ التغييرات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Modal functions
    function openModal(id) {
        document.getElementById(id).classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeModal(id) {
        document.getElementById(id).classList.add('hidden');
        document.body.style.overflow = 'auto';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        if (event.target.classList.contains('fixed')) {
            const modals = document.querySelectorAll('.fixed.hidden');
            modals.forEach(modal => {
                if (!modal.classList.contains('hidden')) {
                    modal.classList.add('hidden');
                    document.body.style.overflow = 'auto';
                }
            });
        }
    }

    // Save functions
    function saveProfile() {
        const name = document.getElementById('name').value;
        const title = document.getElementById('title').value;
        const location = document.getElementById('location').value;
        const phone = document.getElementById('phone').value;

        document.getElementById('profile-name').textContent = name;
        document.getElementById('profile-title').textContent = title;
        document.getElementById('profile-location').innerHTML = `<i class="fas fa-map-marker-alt ml-2 text-blue-600 dark:text-blue-400"></i> ${location}`;
        document.getElementById('profile-phone').innerHTML = `<i class="fas fa-phone ml-2 text-blue-600 dark:text-blue-400"></i> ${phone}`;

        closeModal('edit-profile-modal');
        showAlert('تم تحديث الملف الشخصي بنجاح', 'success');
    }

    function saveAbout() {
        const about = document.getElementById('about').value;
        document.getElementById('profile-about').textContent = about;
        closeModal('edit-about-modal');
        showAlert('تم تحديث النبذة الشخصية بنجاح', 'success');
    }

    function saveSkills() {
        const skillsContainer = document.getElementById('skills-container');
        const skillItems = skillsContainer.querySelectorAll('.skill-item');
        let skillsHTML = '';

        skillItems.forEach(item => {
            const name = item.querySelector('input[type="text"]').value;
            const percentage = item.querySelector('input[type="number"]').value;

            if (name && percentage) {
                skillsHTML += `
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-gray-600 dark:text-gray-300">${name}</span>
                        <span class="text-blue-600 dark:text-blue-400">${percentage}%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2">
                        <div class="bg-blue-600 h-2 rounded-full" style="width: ${percentage}%"></div>
                    </div>
                </div>
                `;
            }
        });

        document.getElementById('skills-list').innerHTML = skillsHTML || '<p class="text-gray-500 dark:text-gray-400 text-center">لا توجد مهارات مضافة</p>';
        closeModal('edit-skills-modal');
        showAlert('تم تحديث المهارات بنجاح', 'success');
    }

    function saveSocial() {
        const github = document.querySelector('#social-form input:nth-of-type(1)').value;
        const linkedin = document.querySelector('#social-form input:nth-of-type(2)').value;
        const twitter = document.querySelector('#social-form input:nth-of-type(3)').value;
        const website = document.querySelector('#social-form input:nth-of-type(4)').value;

        document.getElementById('social-links').innerHTML = `
            <a href="${github}" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                <i class="fab fa-github text-xl ml-3 w-6 text-center"></i>
                ${github}
            </a>
            <a href="${linkedin}" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                <i class="fab fa-linkedin text-xl ml-3 w-6 text-center"></i>
                ${linkedin}
            </a>
            <a href="${twitter}" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                <i class="fab fa-twitter text-xl ml-3 w-6 text-center"></i>
                ${twitter}
            </a>
            <a href="${website}" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                <i class="fas fa-globe text-xl ml-3 w-6 text-center"></i>
                ${website}
            </a>
        `;

        closeModal('edit-social-modal');
        showAlert('تم تحديث روابط التواصل بنجاح', 'success');
    }

    // Skills management
    function addSkill() {
        const skillsContainer = document.getElementById('skills-container');
        const newSkill = document.createElement('div');
        newSkill.className = 'skill-item space-y-2 mt-3';
        newSkill.innerHTML = `
            <div class="flex justify-between">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">المهارة</label>
                <button type="button" onclick="removeSkill(this)" class="text-red-500 hover:text-red-700 text-sm">
                    <i class="fas fa-trash"></i> حذف
                </button>
            </div>
            <div class="flex space-x-2 space-x-reverse">
                <input type="text" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" placeholder="اسم المهارة">
                <input type="number" min="0" max="100" class="w-20 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" placeholder="النسبة">
            </div>
        `;
        skillsContainer.appendChild(newSkill);
    }

    function removeSkill(button) {
        const skillItem = button.closest('.skill-item');
        skillItem.remove();
    }

    // Alert function
    function showAlert(message, type) {
        const alertContainer = document.querySelector('.alert-container');
        const alert = document.createElement('div');
        alert.className = `alert alert-${type}`;
        alert.setAttribute('data-autohide', 'true');
        alert.innerHTML = `
            <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} alert-icon"></i>
            <div class="alert-content">${message}</div>
            <button class="alert-close">
                <i class="fas fa-times"></i>
            </button>
            <div class="alert-progress">
                <div class="alert-progress-bar"></div>
            </div>
        `;

        alertContainer.appendChild(alert);

        // Auto hide after 5 seconds
        setTimeout(() => {
            alert.remove();
        }, 5000);

        // Close button
        alert.querySelector('.alert-close').addEventListener('click', () => {
            alert.remove();
        });
    }
</script>