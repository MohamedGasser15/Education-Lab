<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filter and sort functionality
        const filterSelect = document.getElementById('course-filter');
        const sortSelect = document.getElementById('course-sort');
        const categoryButtons = document.querySelectorAll('.course-category-btn');
        const courseCards = document.querySelectorAll('.course-card-wrapper');

        function filterAndSortCourses() {
            const filterValue = filterSelect.value;
            const sortValue = sortSelect.value;
            const activeCategory = document.querySelector('.course-category-btn.active')?.dataset.category;

            // Filter courses
            courseCards.forEach(card => {
                const matchesFilter = filterValue === 'all' || card.dataset.status === filterValue.replace('-', '');
                const matchesCategory = activeCategory === 'all' || card.dataset.category === activeCategory;

                if (matchesFilter && matchesCategory) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });

            // Sort courses
            const cardsContainer = document.getElementById('courses-grid');
            const cardsArray = Array.from(courseCards).filter(card => card.style.display !== 'none');

            if (sortValue === 'newest') {
                // Assuming newer courses come first in the HTML
                cardsArray.sort((a, b) => 0);
            } else if (sortValue === 'oldest') {
                cardsArray.sort((a, b) => 0).reverse();
            } else if (sortValue === 'highest-rated') {
                cardsArray.sort((a, b) => parseFloat(b.dataset.rating) - parseFloat(a.dataset.rating));
            }

            // Re-append sorted cards
            cardsArray.forEach(card => {
                cardsContainer.appendChild(card);
            });
        }

        // Event listeners
        filterSelect.addEventListener('change', filterAndSortCourses);
        sortSelect.addEventListener('change', filterAndSortCourses);

        categoryButtons.forEach(button => {
            button.addEventListener('click', function() {
                categoryButtons.forEach(btn => btn.classList.remove('active', 'bg-blue-600', 'text-white'));
                categoryButtons.forEach(btn => btn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-300'));

                this.classList.add('active', 'bg-blue-600', 'text-white');
                this.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-300');

                filterAndSortCourses();
            });
        });

        // Initialize with first category active
        if (categoryButtons.length > 0) {
            categoryButtons[0].classList.add('active', 'bg-blue-600', 'text-white');
            categoryButtons[0].classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-300');
        }
    });
</script>