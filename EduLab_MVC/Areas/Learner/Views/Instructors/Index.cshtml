@using EduLab_MVC.Models.DTOs.Instructor
@model List<InstructorDTO>
@{
    ViewData["Title"] = "المدربون";
}
<style>
    .animate-fade-in-down {
        animation: fadeInDown 0.8s ease-out;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .group-button:hover .group-hover-button {
        transform: translateX(-0.25rem);
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<!-- Hero Section - Improved -->
<section class="bg-blue-600 dark:bg-blue-800 text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-500 to-blue-700"></div>
    </div>
    <div class="container mx-auto px-4 text-center relative z-10">
        <h1 class="text-5xl font-bold mb-6 animate-fade-in-down">تعرف على مدربينا الخبراء</h1>
        <p class="text-xl max-w-3xl mx-auto mb-8 leading-relaxed">تعلم من أفضل المدربين المحترفين في مجالاتهم مع خبرة واسعة في التدريب والتعليم. اكتشف خبراتهم واطلع على مسيرتهم المهنية.</p>
        <div class="flex justify-center space-x-4 space-x-reverse">
            <div class="bg-blue-500 bg-opacity-30 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition duration-300">
                <i class="fas fa-graduation-cap text-3xl mb-2"></i>
                <p class="font-semibold">خبرة عملية</p>
            </div>
            <div class="bg-blue-500 bg-opacity-30 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition duration-300">
                <i class="fas fa-users text-3xl mb-2"></i>
                <p class="font-semibold">آلاف الطلاب</p>
            </div>
            <div class="bg-blue-500 bg-opacity-30 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition duration-300">
                <i class="fas fa-trophy text-3xl mb-2"></i>
                <p class="font-semibold">جودة تعليمية</p>
            </div>
        </div>
    </div>
    <div class="absolute bottom-0 left-0 w-full flex justify-center">
        <div class="animate-bounce">
            <i class="fas fa-chevron-down text-3xl text-white opacity-50"></i>
        </div>
    </div>
</section>

<!-- Search and Filter Section -->
<section class="py-8 bg-white dark:bg-gray-800 shadow-sm">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <div class="relative w-full md:w-1/3">
                <input type="text" placeholder="ابحث عن مدرب بالاسم أو التخصص..."
                       class="w-full px-4 py-3 pr-12 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                <div class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                    <i class="fas fa-search"></i>
                </div>
            </div>

            <div class="flex flex-wrap justify-center gap-3">
                <div class="relative">
                    <select class="appearance-none px-4 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-750 transition pr-10 cursor-pointer">
                        <option>التخصص</option>
                        <option>برمجة وتطوير</option>
                        <option>تصميم</option>
                        <option>لغات</option>
                        <option>أعمال</option>
                    </select>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-500"></i>
                    </div>
                </div>

                <div class="relative">
                    <select class="appearance-none px-4 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-750 transition pr-10 cursor-pointer">
                        <option>مستوى الخبرة</option>
                        <option>مبتدئ</option>
                        <option>متوسط</option>
                        <option>متقدم</option>
                    </select>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-500"></i>
                    </div>
                </div>

                <button class="px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition flex items-center">
                    <i class="fas fa-filter ml-2"></i> تطبيق الفلتر
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Instructors Section - Improved -->
<section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10">
            <div>
                <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">مدربونا المعتمدون</h2>
                <p class="text-gray-600 dark:text-gray-400">اكتشف فريقنا من المدربين المحترفين ذوي الخبرة الواسعة</p>
            </div>
            <div class="flex items-center space-x-2 space-x-reverse mt-4 md:mt-0">
                <div class="relative">
                    <select class="appearance-none px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-750 transition pr-8">
                        <option>ترتيب حسب: الافتراضي</option>
                        <option>الأكثر تقييماً</option>
                        <option>الأحدث</option>
                        <option>الأعلى تقييماً</option>
                    </select>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-500"></i>
                    </div>
                </div>

                <div class="flex border border-gray-300 dark:border-gray-600 rounded-lg overflow-hidden">
                    <button class="px-3 py-2 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                        <i class="fas fa-th-large"></i>
                    </button>
                    <button class="px-3 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 transition">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                @foreach (var instructor in Model)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-2 group">
                        <div class="relative overflow-hidden">
                            <img src="@instructor.ProfileImageUrl" alt="@instructor.FullName"
                                 class="w-full h-52 object-cover transition-transform duration-500 group-hover:scale-110">
                            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-60"></div>
                            <div class="absolute bottom-3 left-3 flex items-center bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                                <i class="fas fa-star mr-1"></i>
                                <span>@instructor.Rating.ToString("0.0")</span>
                            </div>
                            <div class="absolute top-3 right-3">
                                <button class="bg-white text-gray-800 p-2 rounded-full shadow-md hover:bg-blue-50 transition">
                                    <i class="far fa-heart"></i>
                                </button>
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2 group-hover:text-blue-600 transition">@instructor.FullName</h3>
                            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-2">@instructor.Title</p>

                            <div class="flex items-center justify-between text-gray-500 dark:text-gray-400 text-sm mb-5">
                                <div class="flex items-center">
                                    <i class="fas fa-users ml-1"></i>
                                    <span>@instructor.TotalStudents.ToString("N0") طالب</span>
                                </div>
                                <div class="flex items-center">
                                    <i class="fas fa-play-circle ml-1"></i>
                                    <span>@instructor.TotalCourses دورة</span>
                                </div>
                            </div>

                            <div class="flex space-x-2 space-x-reverse mb-5">
                                @foreach (var subject in instructor.InstructorSubjects)
                                {
                                    <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-xs text-gray-600 dark:text-gray-300 rounded">@subject</span>
                                }
                            </div>

                            <a asp-area="Learner" asp-controller="Instructors" asp-action="Details" asp-route-id="@instructor.Id"
                               class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-3 rounded-lg transition flex items-center justify-center group-button">
                                <span>عرض الملف الشخصي</span>
                                <i class="fas fa-arrow-left mr-2 transform group-hover-button:-translate-x-1 transition-transform"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-xl shadow">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full text-blue-600 dark:text-blue-300 mb-6">
                    <i class="fas fa-users text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">لا يوجد مدربون متاحون حالياً</h3>
                <p class="text-gray-500 dark:text-gray-400 max-w-md mx-auto">سيتم إضافة مدربين جدد قريباً. يمكنك متابعتنا لمعرفة آخر التحديثات.</p>
                <button class="mt-6 px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                    اشترك للتحديثات
                </button>
            </div>
        }

        <!-- Pagination - Improved -->
        <div class="flex justify-center mt-16">
            <nav class="flex items-center space-x-2 space-x-reverse bg-white dark:bg-gray-800 p-2 rounded-xl shadow-md">
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                    <i class="fas fa-chevron-right"></i>
                </a>
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                    1
                </a>
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-blue-600 bg-blue-600 text-white rounded-lg">
                    2
                </a>
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                    3
                </a>
                <span class="px-2 text-gray-500">...</span>
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                    8
                </a>
                <a href="#" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </nav>
        </div>
    </div>
</section>

<!-- Stats Section -->
