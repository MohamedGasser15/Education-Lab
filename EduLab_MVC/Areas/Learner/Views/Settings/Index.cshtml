                                <select class="form-control">
                                    <option selected>اختر موضوعًا...</option>
                                    <option>مشكلة تقنية</option>
                                    <option>استفسار حول الدفع</option>
                                    <option>مشكلة في المحتوى</option>
                                    <option>اقتراح</option>
                                    <option>شكوى</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="form-label">الوصف</label>
                                <textarea class="form-control" rows="4" placeholder="صف مشكلتك أو استفسارك بالتفصيل..."></textarea>
                            </div>

                            <div class="form-group">
                                <label class="form-label">المرفقات (اختياري)</label>
                                <input type="file" class="form-control">
                                <p class="form-hint">يمكنك رفع لقطات شاشة لتوضيح المشكلة (بحد أقصى 5 ملفات)</p>
                            </div>

                            <button class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                                إرسال الطلب
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.min.js"></script>
    <script asp-append-version="true">
        $(document).ready(function () {
            // Section switching
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.settings-section');
            var isTwoFactorEnabled = @Json.Serialize(isTwoFactorEnabled);

            // Initialize 2FA UI based on status
            const twoFactorToggle = document.getElementById('two-factor-toggle');
            const twoFactorSetup = document.getElementById('two-factor-setup');
            if (isTwoFactorEnabled) {
                $("#two-factor-toggle").prop("checked", true);
                if (twoFactorSetup) twoFactorSetup.style.display = 'none';
            } else {
                $("#two-factor-toggle").prop("checked", false);
                if (twoFactorSetup) twoFactorSetup.style.display = 'none'; // Initially hidden
            }

            navItems.forEach(item => {
                item.addEventListener('click', function () {
                    const sectionId = this.getAttribute('data-section');
                    navItems.forEach(i => i.classList.remove('active'));
                    sections.forEach(s => s.classList.remove('active'));
                    this.classList.add('active');
                    document.getElementById(sectionId).classList.add('active');
                });
            });

            // Button effects
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(btn => {
                btn.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-3px)';
                    this.style.boxShadow = '0 6px 12px rgba(0, 0, 0, 0.15)';
                });
                btn.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
                btn.addEventListener('mousedown', function () {
                    this.style.transform = 'translateY(1px)';
                });
                btn.addEventListener('mouseup', function () {
                    this.style.transform = 'translateY(-3px)';
                });
            });

            // Password toggle functionality
            const toggleCurrentPassword = document.getElementById('toggle-current-password');
            const toggleNewPassword = document.getElementById('toggle-new-password');
            const toggleConfirmPassword = document.getElementById('toggle-confirm-password');
            const currentPasswordInput = document.getElementById('current-password');
            const newPasswordInput = document.getElementById('new-password');
            const confirmPasswordInput = document.getElementById('confirm-password');

            toggleCurrentPassword.addEventListener('click', function () {
                togglePasswordVisibility(currentPasswordInput, this);
            });

            toggleNewPassword.addEventListener('click', function () {
                togglePasswordVisibility(newPasswordInput, this);
            });

            toggleConfirmPassword.addEventListener('click', function () {
                togglePasswordVisibility(confirmPasswordInput, this);
            });

            function togglePasswordVisibility(input, toggle) {
                if (input.type === 'password') {
                    input.type = 'text';
                    toggle.classList.remove('fa-eye');
                    toggle.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    toggle.classList.remove('fa-eye-slash');
                    toggle.classList.add('fa-eye');
                }
            }

            // Password strength checker
            newPasswordInput.addEventListener('input', checkPasswordStrength);
            confirmPasswordInput.addEventListener('input', checkPasswordMatch);

            function checkPasswordStrength() {
                const password = newPasswordInput.value;
                let strength = 0;
                let message = '';

                if (password.length >= 8) strength += 20;
                if (/\d/.test(password)) strength += 20;
                if (/[A-Z]/.test(password)) strength += 20;
                if (/[a-z]/.test(password)) strength += 20;
                if (/[^A-Za-z0-9]/.test(password)) strength += 20;

                const passwordStrengthFill = document.getElementById('password-strength-fill');
                const passwordStrengthText = document.getElementById('password-strength-text');

                passwordStrengthFill.style.width = strength + '%';
                if (strength < 40) {
                    passwordStrengthFill.style.backgroundColor = 'var(--danger)';
                    message = 'كلمة المرور ضعيفة';
                } else if (strength < 80) {
                    passwordStrengthFill.style.backgroundColor = 'var(--warning)';
                    message = 'كلمة المرور متوسطة';
                } else {
                    passwordStrengthFill.style.backgroundColor = 'var(--success)';
                    message = 'كلمة المرور قوية';
                }
                passwordStrengthText.textContent = message;
                passwordStrengthText.style.color = passwordStrengthFill.style.backgroundColor;
            }

            function checkPasswordMatch() {
                const password = newPasswordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                const passwordMatchHint = document.getElementById('password-match-hint');
                if (confirmPassword === '') {
                    passwordMatchHint.textContent = '';
                    return;
                }
                if (password === confirmPassword) {
                    passwordMatchHint.textContent = 'كلمتا المرور متطابقتان';
                    passwordMatchHint.style.color = 'var(--success)';
                } else {
                    passwordMatchHint.textContent = 'كلمتا المرور غير متطابقتان';
                    passwordMatchHint.style.color = 'var(--danger)';
                }
            }

            // Two-factor authentication toggle
            twoFactorToggle.addEventListener('change', function () {
                if (this.checked && !isTwoFactorEnabled) {
                    // Fetch QR code and secret dynamically
                    $.ajax({
                        url: '@Url.Action("GetTwoFactorSetup", "Settings", new { area = "Learner" })',
                        type: 'GET',
                        success: function (response) {
                            if (response.qrCodeUrl && response.secret) {
                                document.getElementById('two-factor-qr').src = response.qrCodeUrl;
                                document.getElementById('two-factor-secret').textContent = response.secret;
                                document.getElementById('recovery-codes').innerHTML = '<h5 style="margin-bottom: 0.5rem;">رموز الاستعادة (احتفظ بها في مكان آمن):</h5>' +
                                    response.recoveryCodes.map(code => `<div>${code}</div>`).join('');
                                if (twoFactorSetup) twoFactorSetup.style.display = 'block';
                            }
                        },
                        error: function () {
                            showErrorMessage('فشل في جلب إعدادات المصادقة الثنائية');
                            twoFactorToggle.checked = false; // Revert toggle on error
                        }
                    });
                } else if (!this.checked && isTwoFactorEnabled) {
                    // Attempt to disable 2FA
                    $.ajax({
                        url: '@Url.Action("DisableTwoFactor", "Settings", new { area = "Learner" })',
                        type: 'POST',
                        success: function () {
                            isTwoFactorEnabled = false;
                            if (twoFactorSetup) twoFactorSetup.style.display = 'none';
                            showSuccessMessage('تم تعطيل المصادقة الثنائية بنجاح');
                            setTimeout(() => window.location.reload(), 2000); // Refresh after 2 seconds
                        },
                        error: function () {
                            showErrorMessage('فشل في تعطيل المصادقة الثنائية');
                            twoFactorToggle.checked = true; // Revert toggle on error
                        }
                    });
                } else {
                    // If toggle is unchecked and 2FA is not enabled, hide setup
                    if (twoFactorSetup) twoFactorSetup.style.display = 'none';
                }
            });

            // Check 2FA status on page load
            $.ajax({
                url: '@Url.Action("GetTwoFactorStatus", "Settings", new { area = "Learner" })',
                type: 'GET',
                success: function (response) {
                    isTwoFactorEnabled = response.isEnabled;
                    twoFactorToggle.checked = isTwoFactorEnabled;
                    if (twoFactorSetup) {
                        twoFactorSetup.style.display = isTwoFactorEnabled ? 'none' : 'none'; // Initially hidden
                    }
                    if (!isTwoFactorEnabled) {
                        // Only fetch setup data if 2FA is not enabled and toggle is checked
                        if (twoFactorToggle.checked) {
                            $.ajax({
                                url: '@Url.Action("GetTwoFactorSetup", "Settings", new { area = "Learner" })',
                                type: 'GET',
                                success: function (setupResponse) {
                                    if (setupResponse.qrCodeUrl && setupResponse.secret) {
                                        document.getElementById('two-factor-qr').src = setupResponse.qrCodeUrl;
                                        document.getElementById('two-factor-secret').textContent = setupResponse.secret;
                                        document.getElementById('recovery-codes').innerHTML = '<h5 style="margin-bottom: 0.5rem;">رموز الاستعادة (احتفظ بها في مكان آمن):</h5>' +
                                            setupResponse.recoveryCodes.map(code => `<div>${code}</div>`).join('');
                                    }
                                },
                                error: function () {
                                    showErrorMessage('فشل في جلب إعدادات المصادقة الثنائية');
                                }
                            });
                        }
                    }
                },
                error: function () {
                    showErrorMessage('فشل في التحقق من حالة المصادقة الثنائية');
                }
            });

            // Disable 2FA button
            $("#disable-two-factor-btn").click(function (e) {
                e.preventDefault();
                const button = this;
                button.classList.add('btn-loading');
                $.ajax({
                    url: '@Url.Action("DisableTwoFactor", "Settings", new { area = "Learner" })',
                    type: 'POST',
                    success: function () {
                        button.classList.remove('btn-loading');
                        isTwoFactorEnabled = false;
                        twoFactorToggle.checked = false;
                        if (twoFactorSetup) twoFactorSetup.style.display = 'none';
                        showSuccessMessage('تم تعطيل المصادقة الثنائية بنجاح');
                        setTimeout(() => window.location.reload(), 2000); // Refresh after 2 seconds
                    },
                    error: function () {
                        button.classList.remove('btn-loading');
                        showErrorMessage('فشل في تعطيل المصادقة الثنائية');
                    }
                });
            });

            // Form validation and AJAX submissions
            $("#general-form").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    FullName: {
                        required: true
                    },
                    PhoneNumber: {
                        phone: true
                    }
                },
                messages: {
                    Email: {
                        required: "الرجاء إدخال البريد الإلكتروني",
                        email: "الرجاء إدخال بريد إلكتروني صالح"
                    },
                    FullName: {
                        required: "الرجاء إدخال اسم المستخدم"
                    },
                    PhoneNumber: {
                        phone: "الرجاء إدخال رقم هاتف صالح"
                    }
                },
                errorElement: "span",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("border-danger");
                },
                unhighlight: function (element) {
                    $(element).removeClass("border-danger");
                },
                submitHandler: function (form) {
                    const button = form.querySelector('#save-general-btn');
                    button.classList.add('btn-loading');
                    $.ajax({
                        url: '@Url.Action("UpdateGeneral", "Settings", new { area = "Learner" })',
                        type: 'POST',
                        data: $(form).serialize(),
                        success: function () {
                            button.classList.remove('btn-loading');
                            showSuccessMessage('تم تحديث الإعدادات بنجاح');
                            setTimeout(() => window.location.reload(), 2000);
                        },
                        error: function () {
                            button.classList.remove('btn-loading');
                            showErrorMessage('فشل في تحديث الإعدادات');
                        }
                    });
                }
            });

            $("#change-password-form").validate({
                rules: {
                    CurrentPassword: {
                        required: true
                    },
                    NewPassword: {
                        required: true,
                        minlength: 8
                    },
                    ConfirmPassword: {
                        required: true,
                        equalTo: "#new-password"
                    }
                },
                messages: {
                    CurrentPassword: {
                        required: "الرجاء إدخال كلمة المرور الحالية"
                    },
                    NewPassword: {
                        required: "الرجاء إدخال كلمة المرور الجديدة",
                        minlength: "يجب أن تكون كلمة المرور 8 أحرف على الأقل"
                    },
                    ConfirmPassword: {
                        required: "الرجاء تأكيد كلمة المرور",
                        equalTo: "كلمتا المرور غير متطابقتان"
                    }
                },
                errorElement: "span",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("border-danger");
                },
                unhighlight: function (element) {
                    $(element).removeClass("border-danger");
                },
                submitHandler: function (form) {
                    const button = form.querySelector('#change-password-btn');
                    button.classList.add('btn-loading');
                    $.ajax({
                        url: '@Url.Action("ChangePassword", "Settings", new { area = "Learner" })',
                        type: 'POST',
                        data: $(form).serialize(),
                        success: function () {
                            button.classList.remove('btn-loading');
                            showSuccessMessage('تم تغيير كلمة المرور بنجاح');
                            form.reset();
                            const passwordStrengthFill = document.getElementById('password-strength-fill');
                            const passwordStrengthText = document.getElementById('password-strength-text');
                            const passwordMatchHint = document.getElementById('password-match-hint');
                            passwordStrengthFill.style.width = '0%';
                            passwordStrengthText.textContent = '';
                            passwordMatchHint.textContent = '';
                            // Reset password input types and icons
                            currentPasswordInput.type = 'password';
                            newPasswordInput.type = 'password';
                            confirmPasswordInput.type = 'password';
                            toggleCurrentPassword.classList.remove('fa-eye-slash');
                            toggleCurrentPassword.classList.add('fa-eye');
                            toggleNewPassword.classList.remove('fa-eye-slash');
                            toggleNewPassword.classList.add('fa-eye');
                            toggleConfirmPassword.classList.remove('fa-eye-slash');
                            toggleConfirmPassword.classList.add('fa-eye');
                        },
                        error: function () {
                            button.classList.remove('btn-loading');
                            showErrorMessage('فشل في تغيير كلمة المرور');
                        }
                    });
                }
            });

            $("#two-factor-form").validate({
                rules: {
                    Code: {
                        required: true,
                        digits: true,
                        minlength: 6,
                        maxlength: 6
                    }
                },
                messages: {
                    Code: {
                        required: "الرجاء إدخال رمز التحقق",
                        digits: "يجب أن يحتوي الرمز على أرقام فقط",
                        minlength: "يجب أن يكون الرمز 6 أرقام",
                        maxlength: "يجب أن يكون الرمز 6 أرقام"
                    }
                },
                errorElement: "span",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("border-danger");
                },
                unhighlight: function (element) {
                    $(element).removeClass("border-danger");
                },
                submitHandler: function (form) {
                    const button = form.querySelector('#enable-two-factor-btn');
                    button.classList.add('btn-loading');
                    $.ajax({
                        url: '@Url.Action("EnableTwoFactor", "Settings", new { area = "Learner" })',
                        type: 'POST',
                        data: $(form).serialize(),
                        success: function () {
                            button.classList.remove('btn-loading');
                            isTwoFactorEnabled = true;
                            twoFactorToggle.checked = true;
                            if (twoFactorSetup) twoFactorSetup.style.display = 'none';
                            showSuccessMessage('تم تفعيل المصادقة الثنائية بنجاح');
                            form.reset();
                            setTimeout(() => window.location.reload(), 2000); // Refresh after 2 seconds
                        },
                        error: function () {
                            button.classList.remove('btn-loading');
                            showErrorMessage('فشل في تفعيل المصادقة الثنائية');
                        }
                    });
                }
            });

            $(".revoke-session-form").each(function () {
                $(this).validate({
                    submitHandler: function (form) {
                        const button = form.querySelector('button[type="submit"]');
                        const sessionId = form.getAttribute('data-session-id');
                        button.classList.add('btn-loading');
                        $.ajax({
                            url: '@Url.Action("RevokeSession", "Settings", new { area = "Learner" })',
                            type: 'POST',
                            data: { sessionId: sessionId },
                            success: function () {
                                button.classList.remove('btn-loading');
                                showSuccessMessage('تم إنهاء الجلسة بنجاح');
                                setTimeout(() => window.location.reload(), 2000);
                            },
                            error: function () {
                                button.classList.remove('btn-loading');
                                showErrorMessage('فشل في إنهاء الجلسة');
                            }
                        });
                    }
                });
            });

            $("#revoke-all-sessions-form").validate({
                submitHandler: function (form) {
                    const button = form.querySelector('button[type="submit"]');
                    button.classList.add('btn-loading');
                    $.ajax({
                        url: '@Url.Action("RevokeAllSessions", "Settings", new { area = "Learner" })',
                        type: 'POST',
                        success: function () {
                            button.classList.remove('btn-loading');
                            showSuccessMessage('تم إنهاء جميع الجلسات بنجاح');
                            setTimeout(() => window.location.reload(), 2000);
                        },
                        error: function () {
                            button.classList.remove('btn-loading');
                            showErrorMessage('فشل في إنهاء الجلسات');
                        }
                    });
                }
            });

            // Success and error messages
            function showSuccessMessage(message) {
                const successMsg = document.createElement('div');
                successMsg.textContent = message;
                successMsg.style.cssText = 'position: fixed; top: 20px; left: 50%; transform: translateX(-50%); background: var(--success); color: white; padding: 12px 24px; border-radius: 8px; box-shadow: var(--shadow-lg); z-index: 1000;';
                document.body.appendChild(successMsg);
                setTimeout(() => document.body.removeChild(successMsg), 3000);
            }

            function showErrorMessage(message) {
                const errorMsg = document.createElement('div');
                errorMsg.textContent = message;
                errorMsg.style.cssText = 'position: fixed; top: 20px; left: 50%; transform: translateX(-50%); background: var(--danger); color: white; padding: 12px 24px; border-radius: 8px; box-shadow: var(--shadow-lg); z-index: 1000;';
                document.body.appendChild(errorMsg);
                setTimeout(() => document.body.removeChild(errorMsg), 3000);
            }
        });
    </script>
