                    التصنيف
                </button>
                <div class="filter-dropdown">
                    <div class="filter-option active">جميع التصنيفات</div>
                    <div class="filter-option">التصميم</div>
                    <div class="filter-option">البرمجة</div>
                    <div class="filter-option">التسويق</div>
                </div>
            </div>

            <div class="filter-group">
                <button class="filter-btn">
                    <i class="fas fa-sort"></i>
                    الترتيب حسب
                </button>
                <div class="filter-dropdown">
                    <div class="filter-option active">الأحدث</div>
                    <div class="filter-option">التقدم (من الأقل)</div>
                    <div class="filter-option">التقدم (من الأعلى)</div>
                    <div class="filter-option">المدة</div>
                </div>
            </div>

            <div class="filter-group">
                <button class="filter-btn">
                    <i class="fas fa-chart-simple"></i>
                    مستوى التقدم
                </button>
                <div class="filter-dropdown">
                    <div class="filter-option active">جميع المستويات</div>
                    <div class="filter-option">لم تبدأ بعد</div>
                    <div class="filter-option">قيد التقدم</div>
                    <div class="filter-option">مكتملة</div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-book-open"></i>
            <h3>لا توجد دورات مسجلة</h3>
            <p>ابدأ رحلة التعلم الخاصة بك من خلال استكشاف الدورات المتاحة في منصتنا التعليمية</p>
            <a href="@Url.Action("Index", "Course", new { area = "Learner" })" class="explore-button">
                <i class="fas fa-compass mr-2"></i>
                استكشاف الدورات
            </a>
        </div>
    }
    else
    {
        <div class="relative">
            <div class="swiper-container grid-mode py-2">
                <div class="swiper-wrapper">
                    @foreach (var enrollment in Model)
                    {
                        <div class="swiper-slide">
                            <div class="w-full h-full">
                                <div class="course-card-wrapper" onclick="window.location='@Url.Action("Details", "Course", new { area = "Learner", id = enrollment.CourseId })'">
                                    <div class="course-card">
                                        <div class="course-image">
                                            <img src="@enrollment.ThumbnailUrl" alt="@enrollment.Title" class="transition-transform duration-500">
                                            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-60"></div>

                                            <span class="course-badge">
                                                <i class="fas fa-check-circle mr-1"></i>
                                                مسجل
                                            </span>
                                            @{
                                                var averageRating = enrollment.AverageRating;
                                                var totalRatings = enrollment.TotalRatings;
                                                var hasRatings = totalRatings > 0;
                                            }
                                            <div class="absolute bottom-2 left-2 flex items-center bg-blue-600 text-white px-2 py-1 rounded-full text-xs font-medium">
                                                <i class="fas fa-star ml-[3px]"></i>
                                                <span>@(hasRatings? FormatRating(averageRating) : "0.0")</span>
                                            </div>
                                        </div>

                                        <div class="course-content">
                                            <h3 class="course-title">@enrollment.Title</h3>
                                            <p class="course-description">@enrollment.ShortDescription</p>

                                            <div class="course-instructor">
                                                <i class="fas fa-user-tie text-blue-600"></i>
                                                <span>@enrollment.InstructorName</span>
                                            </div>

                                            <div class="course-meta">
                                                <span class="course-duration">
                                                    <i class="fas fa-clock text-gray-400"></i>
                                                    @FormatDuration(enrollment.Duration)
                                                </span>
                                                <span class="course-level">@TranslateLevel(enrollment.Level)</span>
                                            </div>

                                            <!-- شريط التقدم -->
                                            @{
                                                decimal percentage = ViewBag.CourseProgress[enrollment.CourseId];
                                                string formattedPercentage = percentage.ToString("0.0"); // رقم عشري واحد بس
                                            }
                                            <div class="progress-container">
                                                <div class="progress-bar">
                                                    <div class="progress-fill" style="width: @formattedPercentage%"></div>
                                                </div>
                                                <div class="progress-text">
                                                    <span>@formattedPercentage% مكتمل</span>
                                                    <span class="last-accessed">آخر زيارة: اليوم</span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="course-footer">
                                            <a href="@Url.Action("Learn", "Course", new { area = "Learner", id = enrollment.CourseId })"
                                               class="learn-button">
                                                <i class="fas fa-play-circle"></i>
                                                استمر في التعلم
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // البحث في الدورات
        const searchInput = document.getElementById('course-search');
        const courseCards = document.querySelectorAll('.course-card-wrapper');

        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();

                courseCards.forEach(card => {
                    const title = card.querySelector('.course-title').textContent.toLowerCase();
                    const description = card.querySelector('.course-description').textContent.toLowerCase();
                    const instructor = card.querySelector('.course-instructor span').textContent.toLowerCase();

                    if (title.includes(searchTerm) || description.includes(searchTerm) || instructor.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }

        // فلترة الدورات - الإصلاح الرئيسي هنا
        const filterOptions = document.querySelectorAll('.filter-option');
        const filterButtons = document.querySelectorAll('.filter-btn');

        // إخفاء جميع القوائم المنسدلة عند النقر خارجها
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.filter-group')) {
                document.querySelectorAll('.filter-dropdown').forEach(dropdown => {
                    dropdown.style.opacity = '0';
                    dropdown.style.visibility = 'hidden';
                    dropdown.style.transform = 'translateY(-10px)';
                });
            }
        });

        // منع إغلاق القائمة عند النقر داخلها
        document.querySelectorAll('.filter-dropdown').forEach(dropdown => {
            dropdown.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });

        // إظهار/إخفاء القوائم المنسدلة
        filterButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();

                // إخفاء جميع القوائم المنسدلة الأخرى
                document.querySelectorAll('.filter-dropdown').forEach(dropdown => {
                    if (dropdown !== this.nextElementSibling) {
                        dropdown.style.opacity = '0';
                        dropdown.style.visibility = 'hidden';
                        dropdown.style.transform = 'translateY(-10px)';
                    }
                });

                // تبديل القائمة الحالية
                const dropdown = this.nextElementSibling;
                if (dropdown && dropdown.style.visibility === 'visible') {
                    dropdown.style.opacity = '0';
                    dropdown.style.visibility = 'hidden';
                    dropdown.style.transform = 'translateY(-10px)';
                } else if (dropdown) {
                    dropdown.style.opacity = '1';
                    dropdown.style.visibility = 'visible';
                    dropdown.style.transform = 'translateY(0)';
                }
            });
        });

        // معالجة اختيار خيارات التصفية
        filterOptions.forEach(option => {
            option.addEventListener('click', function(e) {
                e.stopPropagation();

                // إزالة النشاط من جميع الخيارات في المجموعة
                const parentDropdown = this.closest('.filter-dropdown');
                if (!parentDropdown) return;

                parentDropdown.querySelectorAll('.filter-option').forEach(opt => {
                    opt.classList.remove('active');
                });

                // إضافة النشاط للخيار المحدد
                this.classList.add('active');

                // تحديث نص الزر الرئيسي بدون تراكم
                const filterBtn = parentDropdown.previousElementSibling;
                if (!filterBtn) return;

                const iconElement = filterBtn.querySelector('i');
                if (!iconElement) return;

                const iconClass = iconElement.className;

                // حفظ النص الأصلي للزر (بدون التراكم)
                const originalText = filterBtn.getAttribute('data-original-text') || filterBtn.textContent.trim();
                filterBtn.setAttribute('data-original-text', originalText);

                // تحديث النص مع الحفاظ على الأيقونة فقط
                filterBtn.innerHTML = `<i class="${iconClass}"></i> ${this.textContent}`;

                // إغلاق القائمة بعد الاختيار
                parentDropdown.style.opacity = '0';
                parentDropdown.style.visibility = 'hidden';
                parentDropdown.style.transform = 'translateY(-10px)';

                // هنا يمكنك إضافة منطق التصفية الفعلي
                // بناءً على نوع التصفية المحددة
            });
        });

        // تأثيرات التمرير والتحميل
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // مراقبة البطاقات لتطبيق تأثيرات الظهور
        courseCards.forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            observer.observe(card);
        });
    });
</script>