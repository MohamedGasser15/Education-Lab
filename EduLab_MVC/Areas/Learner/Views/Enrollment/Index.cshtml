@model IEnumerable<EduLab_MVC.Models.DTOs.Enrollment.EnrollmentDto>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">دوراتي</h1>

        <div class="flex items-center gap-4">
            <span class="text-gray-600 dark:text-gray-300">
                <i class="fas fa-book-open mr-2"></i>
                عدد الدورات: @Model.Count()
            </span>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fas fa-book-open text-4xl text-gray-400 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-600 dark:text-gray-300 mb-2">لا توجد دورات مسجلة</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-6">ابدأ رحلة التعلم الخاصة بك من خلال استكشاف الدورات المتاحة</p>
            <a href="@Url.Action("Index", "Course")" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors">
                استكشاف الدورات
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var enrollment in Model)
            {
                <div class="course-card bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-sm border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-md">
                    <div class="relative">
                        <img src="@enrollment.CourseThumbnailUrl" alt="@enrollment.CourseTitle" class="w-full h-40 object-cover">
                        <span class="absolute top-2 left-2 bg-green-500 text-white text-xs px-2 py-1 rounded">مسجل</span>

                        <div class="absolute bottom-0 left-0 right-0 h-1.5 bg-gray-200 dark:bg-gray-700">
                            <div class="h-full bg-blue-500" style="width: @enrollment.ProgressPercentage%"></div>
                        </div>
                    </div>

                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-2 text-gray-800 dark:text-white line-clamp-2">@enrollment.CourseTitle</h3>

                        <div class="flex items-center gap-2 mb-3 text-sm text-gray-500 dark:text-gray-400">
                            <i class="fas fa-user-tie"></i>
                            <span>@enrollment.InstructorName</span>
                        </div>

                        <div class="flex items-center justify-between mb-3">
                            <span class="text-sm text-gray-500 dark:text-gray-400">
                                <i class="fas fa-clock mr-1"></i> @enrollment.CourseDuration ساعة
                            </span>
                            <span class="text-sm font-medium text-green-600">@enrollment.CoursePrice.ToString("C")</span>
                        </div>

                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500 dark:text-gray-400">@enrollment.ProgressPercentage% مكتمل</span>

                            <div class="flex gap-2">
                                <a href="@Url.Action("Details", "Course", new { id = enrollment.CourseId })"
                                   class="text-blue-600 hover:text-blue-700 text-sm">
                                    التفاصيل
                                </a>
                                <a href="@Url.Action("Learn", "Course", new { id = enrollment.CourseId })"
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 rounded-lg text-sm transition-colors">
                                    استمر في التعلم
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>