    <!-- Back to Top Button -->
    <a href="#" class="fixed bottom-6 left-6 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center shadow-lg transition-all opacity-0 invisible hover:bg-blue-700 hover:shadow-xl hover:-translate-y-1" id="backToTop">
        <i class="fas fa-arrow-up"></i>
    </a>

    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        // كود JavaScript الأصلي يبقى كما هو مع تعديلات بسيطة إذا لزم الأمر
        // Show loading indicator
        function showLoading() {
            document.getElementById('loadingIndicator').style.display = 'block';
        }

        function hideLoading() {
            document.getElementById('loadingIndicator').style.display = 'none';
        }

        // متابعة المدرب
        document.getElementById('followButton')?.addEventListener('click', function() {
            const isFollowing = this.classList.contains('following');
            showLoading();

            // محاكاة اتصال API
            setTimeout(() => {
                if (isFollowing) {
                    this.classList.remove('following');
                    this.innerHTML = '<i class="fas fa-plus"></i> متابعة';
                    Toastify({
                        text: "تم إلغاء متابعة المدرب",
                        duration: 3000,
                        gravity: "bottom",
                        position: "left",
                        backgroundColor: "#10b981",
                    }).showToast();
                } else {
                    this.classList.add('following');
                    this.innerHTML = '<i class="fas fa-check"></i> متابع';
                    Toastify({
                        text: "أنت الآن تتابع هذا المدرب",
                        duration: 3000,
                        gravity: "bottom",
                        position: "left",
                        backgroundColor: "#10b981",
                    }).showToast();
                }
                hideLoading();
            }, 800);
        });


        // Pagination Logic
        document.addEventListener('DOMContentLoaded', () => {
            const courses = document.querySelectorAll('.course-item');
            const coursesGrid = document.getElementById('coursesGrid');
            const paginationContainer = document.getElementById('coursesPagination');

            const coursesPerPage = 9;
            let currentPage = 1;

            // Show only the courses for the current page
            function showCourses(page) {
                const startIndex = (page - 1) * coursesPerPage;
                const endIndex = startIndex + coursesPerPage;

                courses.forEach((course, index) => {
                    if (index >= startIndex && index < endIndex) {
                        course.style.display = 'block';
                    } else {
                        course.style.display = 'none';
                    }
                });
            }

            // Generate pagination buttons
            function setupPagination() {
                const pageCount = Math.ceil(courses.length / coursesPerPage);
                paginationContainer.innerHTML = '';

                if (pageCount <= 1) {
                    return;
                }

                // Add 'Previous' button
                const prevButton = document.createElement('a');
                prevButton.href = '#';
                prevButton.classList.add('pagination-item', 'pagination-prev');
                prevButton.innerHTML = '<i class="fas fa-chevron-right"></i>';
                prevButton.setAttribute('aria-label', 'الصفحة السابقة');
                prevButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    if (currentPage > 1) {
                        currentPage--;
                        showCourses(currentPage);
                        updatePaginationButtons();
                        window.scrollTo({ top: coursesGrid.offsetTop - 100, behavior: 'smooth' });
                    }
                });
                paginationContainer.appendChild(prevButton);

                // Add numbered page buttons
                for (let i = 1; i <= pageCount; i++) {
                    const button = document.createElement('a');
                    button.href = '#';
                    button.classList.add('pagination-item');
                    button.innerText = i;
                    button.setAttribute('aria-label', `الصفحة ${i}`);
                    button.addEventListener('click', (e) => {
                        e.preventDefault();
                        currentPage = i;
                        showCourses(currentPage);
                        updatePaginationButtons();
                        window.scrollTo({ top: coursesGrid.offsetTop - 100, behavior: 'smooth' });
                    });
                    paginationContainer.appendChild(button);
                }

                // Add 'Next' button
                const nextButton = document.createElement('a');
                nextButton.href = '#';
                nextButton.classList.add('pagination-item', 'pagination-next');
                nextButton.innerHTML = '<i class="fas fa-chevron-left"></i>';
                nextButton.setAttribute('aria-label', 'الصفحة التالية');
                nextButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    if (currentPage < pageCount) {
                        currentPage++;
                        showCourses(currentPage);
                        updatePaginationButtons();
                        window.scrollTo({ top: coursesGrid.offsetTop - 100, behavior: 'smooth' });
                    }
                });
                paginationContainer.appendChild(nextButton);

                updatePaginationButtons();
            }

            // Update the active button class and enable/disable arrows
            function updatePaginationButtons() {
                const pageButtons = paginationContainer.querySelectorAll('.pagination-item');
                pageButtons.forEach(button => {
                    button.classList.remove('active');
                    if (parseInt(button.innerText) === currentPage) {
                        button.classList.add('active');
                        button.setAttribute('aria-current', 'page');
                    } else {
                        button.removeAttribute('aria-current');
                    }
                });

                const prevButton = document.querySelector('.pagination-prev');
                const nextButton = document.querySelector('.pagination-next');
                const pageCount = Math.ceil(courses.length / coursesPerPage);

                prevButton.style.pointerEvents = currentPage === 1 ? 'none' : 'auto';
                prevButton.style.opacity = currentPage === 1 ? '0.5' : '1';

                nextButton.style.pointerEvents = currentPage === pageCount ? 'none' : 'auto';
                nextButton.style.opacity = currentPage === pageCount ? '0.5' : '1';
            }

            // Initialize pagination if there are courses
            if (courses.length > 0) {
                setupPagination();
                showCourses(currentPage);
            }
        });

        // Show more reviews functionality
        document.getElementById('showMoreReviews')?.addEventListener('click', function() {
            const reviewItems = document.querySelectorAll('.review-item');
            let showingAll = this.dataset.showingAll === 'true';

            if (showingAll) {
                // إخفاء التقييمات الزائدة
                for (let i = 3; i < reviewItems.length; i++) {
                    reviewItems[i].style.display = 'none';
                }
                this.innerHTML = 'عرض المزيد من التقييمات <i class="fas fa-chevron-down"></i>';
                this.dataset.showingAll = 'false';
            } else {
                // عرض جميع التقييمات
                for (let i = 3; i < reviewItems.length; i++) {
                    reviewItems[i].style.display = 'block';
                }
                this.innerHTML = 'عرض تقييمات أقل <i class="fas fa-chevron-up"></i>';
                this.dataset.showingAll = 'true';
            }
        });

        // Rating stars interaction
        const ratingStars = document.querySelectorAll('.rating-star');
        let selectedRating = 0;

        ratingStars.forEach(star => {
            star.addEventListener('click', function() {
                const rating = parseInt(this.dataset.rating);
                selectedRating = rating;

                ratingStars.forEach(s => {
                    if (parseInt(s.dataset.rating) <= rating) {
                        s.classList.add('active', 'fas');
                        s.classList.remove('far');
                    } else {
                        s.classList.remove('active', 'fas');
                        s.classList.add('far');
                    }
                });
            });

            star.addEventListener('mouseover', function() {
                const rating = parseInt(this.dataset.rating);

                ratingStars.forEach(s => {
                    if (parseInt(s.dataset.rating) <= rating) {
                        s.classList.add('active');
                    } else {
                        s.classList.remove('active');
                    }
                });
            });

            star.addEventListener('mouseout', function() {
                ratingStars.forEach(s => {
                    if (parseInt(s.dataset.rating) > selectedRating) {
                        s.classList.remove('active');
                    }
                });
            });
        });

        // Submit review
        document.getElementById('submitReview')?.addEventListener('click', function() {
            const comment = document.getElementById('reviewComment').value;

            if (selectedRating === 0) {
                Toastify({
                    text: "يرجى اختيار تقييم",
                    duration: 3000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "var(--error-color)",
                }).showToast();
                return;
            }

            if (comment.trim().length < 10) {
                Toastify({
                    text: "يرجى كتابة تعليق يحتوي على 10 أحرف على الأقل",
                    duration: 3000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "var(--error-color)",
                }).showToast();
                return;
            }

            showLoading();

            // محاكاة إرسال التقييم
            setTimeout(() => {
                Toastify({
                    text: "شكراً لك على تقييمك!",
                    duration: 3000,
                    gravity: "bottom",
                    position: "left",
                    backgroundColor: "var(--success-color)",
                }).showToast();

                // إعادة تعيين النموذج
                document.getElementById('reviewComment').value = '';
                ratingStars.forEach(s => {
                    s.classList.remove('active', 'fas');
                    s.classList.add('far');
                });
                selectedRating = 0;

                hideLoading();
            }, 1000);
        });

        // Share modal functionality
        const shareModal = document.getElementById('shareModal');
        const shareProfileButton = document.getElementById('shareProfileButton');
        const closeModal = document.getElementById('closeModal');
        const copyLinkButton = document.getElementById('copyLink');
        const profileLinkInput = document.getElementById('profileLink');

        shareProfileButton?.addEventListener('click', () => {
            shareModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        });

        closeModal?.addEventListener('click', () => {
            shareModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });

        copyLinkButton?.addEventListener('click', () => {
            profileLinkInput.select();
            document.execCommand('copy');

            Toastify({
                text: "تم نسخ الرابط إلى الحافظة",
                duration: 3000,
                gravity: "bottom",
                position: "left",
                backgroundColor: "var(--success-color)",
            }).showToast();
        });

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === shareModal) {
                shareModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Share to social platforms
        document.querySelectorAll('.share-option').forEach(option => {
            option.addEventListener('click', function() {
                const platform = this.dataset.platform;
                const url = encodeURIComponent(window.location.href);
                const title = encodeURIComponent(document.title);
                let shareUrl;

                switch (platform) {
                    case 'facebook':
                        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                        break;
                    case 'twitter':
                        shareUrl = `https://twitter.com/intent/tweet?text=${title}&url=${url}`;
                        break;
                    case 'linkedin':
                        shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${url}`;
                        break;
                    case 'whatsapp':
                        shareUrl = `https://wa.me/?text=${title} ${url}`;
                        break;
                    case 'telegram':
                        shareUrl = `https://t.me/share/url?url=${url}&text=${title}`;
                        break;
                    case 'link':
                        profileLinkInput.select();
                        document.execCommand('copy');

                        Toastify({
                            text: "تم نسخ الرابط إلى الحافظة",
                            duration: 3000,
                            gravity: "bottom",
                            position: "left",
                            backgroundColor: "var(--success-color)",
                        }).showToast();
                        return;
                    default:
                        return;
                }

                window.open(shareUrl, '_blank');
            });
        });

        // Back to top button
        const backToTopButton = document.getElementById('backToTop');

        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopButton.classList.add('visible');
            } else {
                backToTopButton.classList.remove('visible');
            }
        });

        backToTopButton.addEventListener('click', (e) => {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Lazy loading for images
        if ('loading' in HTMLImageElement.prototype) {
            // المتصفح يدعم lazy loading natively
            const images = document.querySelectorAll('img[loading="lazy"]');
            images.forEach(img => {
                img.src = img.src;
            });
        } else {
            // Fallback for browsers that don't support lazy loading
            const script = document.createElement('script');
            script.src = 'https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js';
            document.body.appendChild(script);
        }

        // Initialize tooltips
        document.querySelectorAll('[title]').forEach(el => {
            el.addEventListener('mouseenter', function() {
                const tooltip = document.createElement('div');
                tooltip.className = 'tooltip';
                tooltip.textContent = this.getAttribute('title');
                document.body.appendChild(tooltip);

                const rect = this.getBoundingClientRect();
                tooltip.style.position = 'fixed';
                tooltip.style.top = (rect.top - tooltip.offsetHeight - 5) + 'px';
                tooltip.style.left = (rect.left + rect.width/2 - tooltip.offsetWidth/2) + 'px';

                this.addEventListener('mouseleave', () => {
                    tooltip.remove();
                }, { once: true });
            });
        });
    </script>
