    }

    /* Custom Checkbox */
    .custom-checkbox {
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 0.25rem;
        border: 1px solid #d1d5db;
        appearance: none;
        -webkit-appearance: none;
