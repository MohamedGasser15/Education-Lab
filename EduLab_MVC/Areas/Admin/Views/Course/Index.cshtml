<script>
    document.addEventListener('DOMContentLoaded', function() {
        // تهيئة المتغيرات العامة
        let rowsPerPage = 10;
        let currentPage = 1;
        let filteredRows = Array.from(document.querySelectorAll('tbody tr[data-course-id]'));
        const totalCourses = document.getElementById('total-courses');
        const showingFrom = document.getElementById('showing-from');
        const showingTo = document.getElementById('showing-to');
        const paginationNumbers = document.getElementById('pagination-numbers');
        const prevButton = document.getElementById('prev-page');
        const nextButton = document.getElementById('next-page');
        const searchInput = document.getElementById('searchInput');
        const categoryFilter = document.getElementById('categoryFilter');
        const statusFilter = document.getElementById('statusFilter');
        const resetFiltersBtn = document.getElementById('resetFilters');
        const rowsPerPageSelect = document.getElementById('rows-per-page');

        // فلترة الكورسات
        function filterCourses() {
            const searchTerm = searchInput.value.toLowerCase();
            const categoryValue = categoryFilter.value;
            const statusValue = statusFilter.value;

            filteredRows = Array.from(document.querySelectorAll('tbody tr[data-course-id]')).filter(row => {
                const title = row.querySelector('td:nth-child(2) div:first-child').textContent.toLowerCase();
                const category = row.getAttribute('data-category');
                const status = row.querySelector('td:nth-child(7) span').textContent.trim();

                const matchesSearch = title.includes(searchTerm);
                const matchesCategory = !categoryValue || category === categoryValue;
                const matchesStatus = !statusValue || status === statusValue;

                return matchesSearch && matchesCategory && matchesStatus;
            });

            totalCourses.textContent = filteredRows.length;
            currentPage = 1;
            updateTable();
            setupPagination();
        }

        // تحديث الجدول
        function updateTable() {
            const start = (currentPage - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            document.querySelectorAll('tbody tr[data-course-id]').forEach(row => {
                row.style.display = 'none';
            });

            filteredRows.slice(start, end).forEach(row => {
                row.style.display = '';
            });

            showingFrom.textContent = start + 1;
            showingTo.textContent = Math.min(end, filteredRows.length);
        }

        // إعداد الترقيم الصفحي
        function setupPagination() {
            const pageCount = Math.ceil(filteredRows.length / rowsPerPage);
            paginationNumbers.innerHTML = '';

            if (pageCount <= 1) return;

            // إضافة زر الصفحة الأولى
            addPageButton(1);

            // إضافة زر الصفحة الحالية والصفحات المجاورة
            const startPage = Math.max(2, currentPage - 1);
            const endPage = Math.min(pageCount - 1, currentPage + 1);

            if (startPage > 2) {
                paginationNumbers.innerHTML += '<span class="px-3 py-1">...</span>';
            }

            for (let i = startPage; i <= endPage; i++) {
                addPageButton(i);
            }

            if (endPage < pageCount - 1) {
                paginationNumbers.innerHTML += '<span class="px-3 py-1">...</span>';
            }

            // إضافة زر الصفحة الأخيرة
            if (pageCount > 1) {
                addPageButton(pageCount);
            }

            updatePaginationButtons();
        }

        function addPageButton(pageNumber) {
            const pageButton = document.createElement('button');
            pageButton.className = `pagination-btn ${pageNumber === currentPage ? 'active' : ''}`;
            pageButton.textContent = pageNumber;
            pageButton.addEventListener('click', () => {
                currentPage = pageNumber;
                updateTable();
                setupPagination();
            });
            paginationNumbers.appendChild(pageButton);
        }

        function updatePaginationButtons() {
            const pageCount = Math.ceil(filteredRows.length / rowsPerPage);

            prevButton.disabled = currentPage === 1;
            nextButton.disabled = currentPage === pageCount || pageCount === 0;

            if (prevButton.disabled) {
                prevButton.classList.add('disabled');
            } else {
                prevButton.classList.remove('disabled');
            }

            if (nextButton.disabled) {
                nextButton.classList.add('disabled');
            } else {
                nextButton.classList.remove('disabled');
            }
        }

        // أحداث الفلترة والبحث
        searchInput.addEventListener('input', filterCourses);
        categoryFilter.addEventListener('change', filterCourses);
        statusFilter.addEventListener('change', filterCourses);
        resetFiltersBtn.addEventListener('click', function() {
            searchInput.value = '';
            categoryFilter.value = '';
            statusFilter.value = '';
            filterCourses();
        });

        // تغيير عدد الصفوف لكل صفحة
        rowsPerPageSelect.addEventListener('change', function() {
            rowsPerPage = parseInt(this.value);
            currentPage = 1;
            updateTable();
            setupPagination();
        });

        // أحداث الترقيم الصفحي
        prevButton.addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                updateTable();
                setupPagination();
            }
        });

        nextButton.addEventListener('click', () => {
            const pageCount = Math.ceil(filteredRows.length / rowsPerPage);
            if (currentPage < pageCount) {
                currentPage++;
                updateTable();
                setupPagination();
            }
        });

        // Bulk Actions - الكود المعدل
        const bulkActionsContainer = document.getElementById('bulkActionsContainer');
        const selectAllCheckbox = document.getElementById('selectAll');
        const rowCheckboxes = document.querySelectorAll('.row-checkbox');
        const selectedCountSpan = document.getElementById('selectedCount');
        const bulkActionSelect = document.getElementById('bulkAction');
        const applyBulkActionBtn = document.getElementById('applyBulkAction');

        // تحديث عدد العناصر المحددة
        function updateSelectedCount() {
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;
            selectedCountSpan.textContent = selectedCount;

            if (selectedCount > 0) {
                bulkActionsContainer.classList.remove('hidden');
                selectAllCheckbox.checked = selectedCount === rowCheckboxes.length;
                updateBulkActionOptions(); // تحديث خيارات الـ Bulk Actions عند تغيير التحديد
            } else {
                bulkActionsContainer.classList.add('hidden');
                selectAllCheckbox.checked = false;
            }
        }

        // تحديث خيارات الـ Bulk Actions بناءً على حالة الكورسات المحددة
        function updateBulkActionOptions() {
            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            const bulkAcceptOption = document.querySelector('.bulk-accept-option');
            const bulkRejectOption = document.querySelector('.bulk-reject-option');
            const bulkDeleteOption = document.querySelector('option[value="delete"]');

            let hasPending = false;
            let hasApproved = false;
            let hasRejected = false;

            selectedCheckboxes.forEach(checkbox => {
                const row = checkbox.closest('tr');
                const status = row.querySelector('td:nth-child(7) span').textContent.trim();

                if (status === 'قيد المراجعة') hasPending = true;
                if (status === 'مقبول') hasApproved = true;
                if (status === 'مرفوض') hasRejected = true;
            });

            // إظهار/إخفاء خيارات الـ Bulk Actions بناءً على الحالة
            bulkAcceptOption.style.display = hasPending ? '' : 'none';
            bulkRejectOption.style.display = hasPending ? '' : 'none';
            bulkDeleteOption.style.display = (hasApproved || hasRejected) ? '' : 'none';

            // إعادة تعيين اختيار الإجراء إذا كان الخيار الحالي مخفي
            if (bulkActionSelect.value &&
                document.querySelector(`option[value="${bulkActionSelect.value}"]`).style.display === 'none') {
                bulkActionSelect.value = '';
            }
        }

        // تحديد/إلغاء تحديد الكل
        selectAllCheckbox.addEventListener('change', function() {
            const isChecked = this.checked;
            rowCheckboxes.forEach(checkbox => {
                checkbox.checked = isChecked;
            });
            updateSelectedCount();
        });

        // تحديد صف فردي
        rowCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateSelectedCount);
        });

        // تطبيق الإجراء الجماعي
        applyBulkActionBtn.addEventListener('click', function() {
            const action = bulkActionSelect.value;
            if (!action) {
                showAlert('error', 'الرجاء اختيار إجراء من القائمة');
                return;
            }

            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            if (selectedCheckboxes.length === 0) {
                showAlert('error', 'لم يتم تحديد أي كورسات');
                return;
            }

            // تحويل القيم إلى أعداد صحيحة
            const selectedIds = Array.from(selectedCheckboxes).map(checkbox => {
                const row = checkbox.closest('tr');
                return parseInt(row.getAttribute('data-course-id'));
            }).filter(id => !isNaN(id));

            if (selectedIds.length === 0) {
                showAlert('error', 'لا توجد معرّفات صالحة للكورسات المحددة');
                return;
            }

            if (action === 'delete') {
                showBulkDeleteModal(selectedIds);
            } else {
                applyBulkAction(action, selectedIds);
            }
        });

        // عرض مودال الحذف الجماعي
        function showBulkDeleteModal(selectedIds) {
            document.getElementById('bulkDeleteCount').textContent = selectedIds.length;
            document.getElementById('bulkDeleteIds').value = selectedIds.join(',');
            document.getElementById('bulkDeleteModal').classList.remove('hidden');
        }

        // تطبيق الإجراء الجماعي
        async function applyBulkAction(action, selectedIds) {
            try {
                let endpoint = '';
                let successMessage = '';

                switch (action) {
                    case 'accept':
                        endpoint = '/Admin/Course/AcceptMultiple';
                        successMessage = 'تم قبول الكورسات المحددة بنجاح';
                        break;
                    case 'reject':
                        endpoint = '/Admin/Course/RejectMultiple';
                        successMessage = 'تم رفض الكورسات المحددة بنجاح';
                        break;
                    case 'delete':
                        endpoint = '/Admin/Course/BulkDelete';
                        successMessage = 'تم حذف الكورسات المحددة بنجاح';
                        break;
                    default:
                        showAlert('error', 'إجراء غير معروف');
                        return;
                }

                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('success', successMessage);
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showAlert('error', data.message || 'حدث خطأ أثناء تنفيذ الإجراء');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('error', 'حدث خطأ أثناء تنفيذ الإجراء');
            }
        }

        // عرض مودال تفاصيل الكورس
        document.addEventListener('click', function(e) {
            if (e.target.closest('.view-details')) {
                const courseId = e.target.closest('.view-details').getAttribute('data-course-id');
                fetchCourseDetails(courseId);
            }
        });

        // جلب تفاصيل الكورس
        async function fetchCourseDetails(courseId) {
            try {
                // إظهار مؤشر التحميل
                const modalBody = document.querySelector('#courseDetailsModal .modal-body');
                modalBody.innerHTML = `
                    <div class="flex justify-center items-center h-64">
                        <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500"></div>
                    </div>
                `;

                // عرض المودال فوراً مع مؤشر التحميل
                document.getElementById('courseDetailsModal').classList.remove('hidden');

                const response = await fetch(`/Admin/Course/Details/${courseId}`);
                const data = await response.json();

                if (!data.success) {
                    showAlert('error', data.message);
                    document.getElementById('courseDetailsModal').classList.add('hidden');
                    return;
                }

                const course = data.course;

                // إنشاء محتوى المودال
                let modalContent = `
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                        <!-- الصورة والمعلومات الأساسية -->
                        <div class="col-span-1">
                            <div class="rounded-xl overflow-hidden bg-gray-100 dark:bg-gray-700 h-56 flex items-center justify-center mb-4">
                `;

                // عرض الصورة أو الأيقونة الافتراضية
                if (course.thumbnailUrl) {
                    modalContent += `
                        <img src="${course.thumbnailUrl}" alt="Course Image" class="h-full w-full object-cover">
                    `;
                } else {
                    modalContent += `
                        <i class="fas fa-book text-gray-400 text-6xl"></i>
                    `;
                }

                modalContent += `
                            </div>

                            <div class="bg-gray-50 dark:bg-gray-700/50 p-5 rounded-xl mb-4 border border-gray-200 dark:border-gray-600">
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                                    <i class="fas fa-info-circle text-blue-500 mr-3 text-xl"></i>
                                    المعلومات الأساسية
                                </h4>
                                <div class="space-y-4">
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">عنوان الكورس</p>
                                        <p class="text-lg font-medium text-gray-800 dark:text-white">${course.title || 'غير متوفر'}</p>
                                    </div>
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">الوصف المختصر</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.shortDescription || 'غير متوفر'}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- التفاصيل الإضافية -->
                        <div class="col-span-1">
                            <div class="bg-gray-50 dark:bg-gray-700/50 p-5 rounded-xl mb-4 border border-gray-200 dark:border-gray-600 h-full">
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                                    <i class="fas fa-chart-line text-blue-500 mr-3 text-xl"></i>
                                    الإحصائيات
                                </h4>
                                <div class="space-y-4">
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">المستوى</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.level || 'غير محدد'}</p>
                                    </div>
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">اللغة</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.language === 'ar' ? 'العربية' : 'الإنجليزية'}</p>
                                    </div>
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">المدة</p>
                                        <p class="text-base text-gray-800 dark:text-white">${formatDuration(course.duration)}</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">عدد المحاضرات</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.totalLectures || 0}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- التسعير -->
                        <div class="col-span-1">
                            <div class="bg-gray-50 dark:bg-gray-700/50 p-5 rounded-xl mb-4 border border-gray-200 dark:border-gray-600">
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                                    <i class="fas fa-tag text-blue-500 mr-3 text-xl"></i>
                                    التسعير
                                </h4>
                                <div class="space-y-4">
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">السعر</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.price ? course.price.toFixed(2) + ' ج.م' : 'غير محدد'}</p>
                                    </div>
                                    <div class="border-b border-gray-200 dark:border-gray-600 pb-3">
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">الخصم</p>
                                        <p class="text-base text-gray-800 dark:text-white">${course.discount > 0 ? course.discount.toFixed(2) + ' ج.م' : 'لا يوجد خصم'}</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">السعر النهائي</p>
                                        <p class="text-lg font-bold text-blue-600 dark:text-blue-400">${(course.price - (course.discount || 0)).toFixed(2)} ج.م</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                `;

                // أقسام الكورس
                let sectionsContent = '';
                if (course.sections && course.sections.length > 0) {
                    course.sections.forEach(section => {
                        sectionsContent += `
                            <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden mb-4">
                                <div class="bg-gray-100 dark:bg-gray-800 px-4 py-3 flex items-center justify-between">
                                    <h5 class="font-medium text-gray-800 dark:text-white flex items-center">
                                        <i class="fas fa-folder-open text-blue-500 mr-3"></i>
                                        ${section.title}
                                    </h5>
                                    <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded-full">
                                        ${section.lectures.length} دروس
                                    </span>
                                </div>
                                <div class="divide-y divide-gray-200 dark:divide-gray-700 max-h-60 overflow-y-auto">
                        `;

                        section.lectures.forEach(lecture => {
                            sectionsContent += `
                                <div class="px-4 py-3 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                                    <div class="flex items-center">
                                        <i class="fas ${lecture.contentType === 'video' ? 'fa-video' : 'fa-file-alt'} text-gray-400 dark:text-gray-500 mr-3"></i>
                                        <span class="text-sm text-gray-800 dark:text-white">${lecture.title}</span>
                                    </div>
                                    <div class="flex items-center">
                                        <span class="text-xs text-gray-500 dark:text-gray-400 mr-3">${formatDuration(lecture.duration)}</span>
                                        ${lecture.isFreePreview ? '<span class="text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-2 py-1 rounded-full">معاينة مجانية</span>' : ''}
                                    </div>
                                </div>
                            `;
                        });

                        sectionsContent += `
                                </div>
                            </div>
                        `;
                    });
                } else {
                    sectionsContent = '<p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">لا توجد أقسام لهذا الكورس</p>';
                }

                // إكمال محتوى المودال
                modalContent += `
                        <!-- الأقسام -->
                        <div class="col-span-3">
                            <div class="bg-gray-50 dark:bg-gray-700/50 p-5 rounded-xl border border-gray-200 dark:border-gray-600">
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                                    <i class="fas fa-book-open text-blue-500 mr-3 text-xl"></i>
                                    محتوى الكورس
                                </h4>
                                <div class="space-y-4">
                                    ${sectionsContent}
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                // إضافة المحتوى إلى المودال
                modalBody.innerHTML = modalContent;

                // إضافة تأثير ظهور تدريجي
                modalBody.querySelectorAll('div').forEach((el, index) => {
                    el.style.opacity = '0';
                    el.style.transform = 'translateY(10px)';
                    el.style.transition = 'opacity 0.3s ease, transform 0.3s ease';

                    setTimeout(() => {
                        el.style.opacity = '1';
                        el.style.transform = 'translateY(0)';
                    }, 100 + (index * 50));
                });

            } catch (error) {
                console.error('Error fetching course details:', error);
                showAlert('error', 'حدث خطأ أثناء جلب تفاصيل الكورس');
                document.getElementById('courseDetailsModal').classList.add('hidden');
            }
        }

        // تنسيق المدة
        function formatDuration(totalSeconds) {
            if (!totalSeconds || totalSeconds <= 0) return "0 ثانية";

            const hours = Math.floor(totalSeconds / 3600);
            const remainingSecondsAfterHours = totalSeconds % 3600;
            const minutes = Math.floor(remainingSecondsAfterHours / 60);
            const seconds = remainingSecondsAfterHours % 60;

            const parts = [];

            if (hours > 0) {
                parts.push(`${hours} ساعة`);
            }

            if (minutes > 0) {
                parts.push(`${minutes} دقيقة`);
            }

            if (seconds > 0 || parts.length === 0) {
                parts.push(`${seconds} ثانية`);
            }

            return parts.join(' و ');
        }

        // إغلاق مودال التفاصيل
        function closeDetailsModal() {
            const modal = document.getElementById('courseDetailsModal');
            modal.classList.add('opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('opacity-0');
            }, 300);
        }

        // عرض مودال حذف الكورس
        document.addEventListener('click', function(e) {
            if (e.target.closest('.delete-course')) {
                const btn = e.target.closest('.delete-course');
                const courseId = btn.getAttribute('data-course-id');
                const courseName = btn.getAttribute('data-course-name');

                document.getElementById('deleteCourseId').value = courseId;
                document.getElementById('deleteCourseName').textContent = courseName;
                document.getElementById('deleteCourseModal').classList.remove('hidden');
            }
        });

        // إغلاق مودال الحذف
        function closeDeleteModal() {
            document.getElementById('deleteCourseModal').classList.add('hidden');
        }

        // إغلاق مودال الحذف الجماعي
        function closeBulkDeleteModal() {
            document.getElementById('bulkDeleteModal').classList.add('hidden');
        }

        // إرسال نموذج الحذف
        document.getElementById('deleteCourseForm')?.addEventListener('submit', async function (e) {
            e.preventDefault();

            const courseId = document.getElementById('deleteCourseId').value;
            const confirmBtn = this.querySelector('button[type="submit"]');
            const originalBtnContent = confirmBtn.innerHTML;

            // إضافة أيقونة التحميل
            confirmBtn.innerHTML = `<i class="fas fa-spinner fa-spin ml-2"></i> جاري الحذف...`;
            confirmBtn.disabled = true;

            try {
                const response = await fetch(`/Admin/Course/Delete/${courseId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('success', 'تم حذف الكورس بنجاح');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    confirmBtn.innerHTML = originalBtnContent;
                    confirmBtn.disabled = false;
                }
            } catch (error) {
                console.error('Error:', error);
                confirmBtn.innerHTML = originalBtnContent;
                confirmBtn.disabled = false;
            }
        });

        // إرسال نموذج الحذف الجماعي
        document.getElementById('bulkDeleteForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();

            const ids = document.getElementById('bulkDeleteIds').value.split(',')
                .map(id => parseInt(id))
                .filter(id => !isNaN(id));

            try {
                const response = await fetch('/Admin/Course/BulkDelete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(ids)
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('success', data.message || 'تم الحذف الجماعي بنجاح');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showAlert('error', data.message || 'حدث خطأ أثناء الحذف الجماعي');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('error', 'حدث خطأ أثناء الحذف الجماعي');
            }
        });

        // عند النقر على أي زر Edit
        document.addEventListener('click', function(e) {
            if (e.target.closest('.action-btn') && e.target.closest('.action-btn').querySelector('.fa-edit')) {
                const editBtn = e.target.closest('.action-btn');
                const courseId = editBtn.closest('tr').getAttribute('data-course-id');
                window.location.href = `/Admin/Course/Edit/${courseId}`;
            }
        });

        // تهيئة أحداث إغلاق المودالات
        function setupModalCloseEvents() {
            // إغلاق مودال التفاصيل
            document.getElementById('closeDetailsModal')?.addEventListener('click', closeDetailsModal);
            document.getElementById('closeDetailsModalBtn')?.addEventListener('click', closeDetailsModal);
            document.getElementById('courseDetailsModal')?.addEventListener('click', function(e) {
                if (e.target === this) closeDetailsModal();
            });

            // إغلاق مودال الحذف
            document.getElementById('closeDeleteModal')?.addEventListener('click', closeDeleteModal);
            document.getElementById('cancelDeleteBtn')?.addEventListener('click', closeDeleteModal);
            document.getElementById('deleteCourseModal')?.addEventListener('click', function(e) {
                if (e.target === this) closeDeleteModal();
            });

            // إغلاق مودال الحذف الجماعي
            document.getElementById('closeBulkDeleteModal')?.addEventListener('click', closeBulkDeleteModal);
            document.getElementById('cancelBulkDeleteBtn')?.addEventListener('click', closeBulkDeleteModal);
            document.getElementById('bulkDeleteModal')?.addEventListener('click', function(e) {
                if (e.target === this) closeBulkDeleteModal();
            });
        }

        // استدعاء الدالة لتهيئة أحداث الإغلاق
        setupModalCloseEvents();

        // تهيئة الجدول
        filterCourses();
    });
</script>
<script>
        // وظائف فتح وإغلاق المودال
    function openModal(modalId) {
        document.getElementById(modalId).classList.remove('hidden');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
    }

    // إغلاق المودال عند النقر خارج المحتوى
    window.onclick = function(event) {
        if (event.target === document.getElementById('courseDetailsModal')) {
            closeModal('courseDetailsModal');
        }
        if (event.target === document.getElementById('deleteCourseModal')) {
            closeModal('deleteCourseModal');
        }
        if (event.target === document.getElementById('bulkDeleteModal')) {
            closeModal('bulkDeleteModal');
        }
    }

    // تهيئة أحداث إغلاق المودالات
    function setupModalCloseEvents() {
        // إغلاق مودال التفاصيل
        document.getElementById('closeDetailsModal')?.addEventListener('click', () => closeModal('courseDetailsModal'));
        document.getElementById('closeDetailsModalBtn')?.addEventListener('click', () => closeModal('courseDetailsModal'));

        // إغلاق مودال الحذف
        document.getElementById('closeDeleteModal')?.addEventListener('click', () => closeModal('deleteCourseModal'));
        document.getElementById('cancelDeleteBtn')?.addEventListener('click', () => closeModal('deleteCourseModal'));

        // إغلاق مودال الحذف الجماعي
        document.getElementById('closeBulkDeleteModal')?.addEventListener('click', () => closeModal('bulkDeleteModal'));
        document.getElementById('cancelBulkDeleteBtn')?.addEventListener('click', () => closeModal('bulkDeleteModal'));
    }

    // استدعاء الدالة لتهيئة أحداث الإغلاق
    setupModalCloseEvents();
</script>