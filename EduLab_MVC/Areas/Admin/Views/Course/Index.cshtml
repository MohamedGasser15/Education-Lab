        transition: all 0.2s;
        position: relative;
    }

    .dark .custom-checkbox {
        border-color: #4b5563;
        background-color: #1f2937;
    }

    .custom-checkbox:checked {
        background-color: #2563eb;
        border-color: #2563eb;
    }

        .custom-checkbox:checked::after {
            content: "✓";
            position: absolute;
            color: white;
            font-size: 0.75rem;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

