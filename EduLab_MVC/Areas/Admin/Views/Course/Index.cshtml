                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                        else if (course.Status == "Rejected")
                                        {
                                            <form asp-action="Accept" asp-controller="Course" method="post" class="inline">
                                                <input type="hidden" name="id" value="@course.Id" />
                                                <button type="submit" class="action-btn bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 hover:bg-green-200 dark:hover:bg-green-800">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>

                                            <button class="action-btn bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300 hover:bg-red-200 dark:hover:bg-red-800 delete-course" data-course-id="@course.Id" data-course-name="@course.Title">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
