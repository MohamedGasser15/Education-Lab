            }
        }

        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8); /* أبيض شفاف */
            z-index: 9998;
            display: flex;
            align-items: flex-start;
            justify-content: flex-start;
        }

        /* loader نفسه */
        .hyper-loader {
            position: relative;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            z-index: 9999;
            overflow: hidden;
            background: rgba(37, 99, 235, 0.1);
        }

            .hyper-loader::before {
                content: "";
                position: absolute;
                left: 0;
                width: 30%;
                height: 100%;
                background: linear-gradient(90deg, #60a5fa, #2563eb, #1d4ed8, #1e3a8a);
                animation: hyper-loop 1.5s ease-in-out infinite;
                box-shadow: 0 0 15px rgba(37, 99, 235, 0.7);
                border-radius: 0 3px 3px 0;
            }

            .hyper-loader::after {
                content: "";
                position: absolute;
                top: 0;
                right: 0;
                width: 25px;
                height: 100%;
                background: linear-gradient( 90deg, rgba(255, 255, 255, 0), rgba(255, 200, 200, 0.8), rgba(255, 255, 255, 0) );
                animation: hyper-shine 1.5s ease-in-out infinite;
                filter: blur(2px);
            }

        @@keyframes hyper-loop {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(330%);
            }
        }

        @@keyframes hyper-shine {
            0% {
                transform: translateX(-200%);
            }

            100% {
                transform: translateX(500%);
            }
        }


        .sidebar-item:hover .sidebar-icon {
            transform: translateX(-3px);
        }

        .dropdown-enter {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
        }

        .dropdown-enter-active {
            max-height: 500px;
            opacity: 1;
            transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        .dropdown-exit {
            max-height: 500px;
            opacity: 1;
        }

        .dropdown-exit-active {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        .smooth-transition {
            transition: all 0.3s ease-in-out;
        }

        .animate-gradient-text {
            animation: gradientText 3s ease infinite;
            background: linear-gradient(90deg, #3b82f6, #10b981, #3b82f6);
            background-size: 200% auto;
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        @@keyframes gradientText {
            0% {
                background-position: 0% center;
            }

            100% {
                background-position: 200% center;
            }
        }

        .animate-pulse {
            animation: pulse 1.5s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 0.7;
            }

            50% {
                opacity: 1;
            }
        }

        .sidebar-collapsed .sidebar-text,
        .sidebar-collapsed .sidebar-header-text {
            display: none;
        }

        .sidebar-collapsed .sidebar-group-content {
            display: none !important;
        }

        .sidebar-collapsed {
            width: 5rem;
        }

        .sidebar-expanded {
            width: 16rem;
        }

        .sidebar-toggle-icon {
            transition: transform 0.3s ease;
        }

        .sidebar-collapsed .sidebar-toggle-icon {
            transform: rotate(180deg);
        }

        .search-box {
            transition: all 0.3s ease;
            max-width: 0;
            opacity: 0;
            overflow: hidden;
        }

            .search-box.active {
                max-width: 300px;
                opacity: 1;
                margin-left: 10px;
            }
    </style>
</head>
