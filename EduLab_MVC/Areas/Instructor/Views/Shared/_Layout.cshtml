@functions {
    public string IsActive(string controller, params string[] actions)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        if (currentController == null || currentAction == null)
            return "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-primary-600 hover:text-white transition";

        return currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) &&
        actions.Any(a => a.Equals(currentAction, StringComparison.OrdinalIgnoreCase))
        ? "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg transition bg-primary-600 text-white"
        : "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-primary-600 hover:text-white transition";
    }

    public string IsActiveGroup(string controller, string[]? actions = null)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        // Base classes that apply to all items
        var baseClasses = "block py-2 px-4 transition-colors duration-200";

        // If no controller is specified or route data is missing, return inactive state
        if (string.IsNullOrEmpty(currentController))
            return $"{baseClasses} text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700";

        // Check if the current controller matches
        bool isActive = currentController.Equals(controller, StringComparison.OrdinalIgnoreCase);

        // If actions are provided, also check if current action matches any of them
        if (actions != null && actions.Length > 0)
        {
            isActive = isActive && actions.Any(a =>
            a.Equals(currentAction, StringComparison.OrdinalIgnoreCase));
        }

        return isActive
        ? $"{baseClasses} text-white bg-primary-600 dark:bg-primary-700 font-medium"
        : $"{baseClasses} text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700";
    }

    // دالة جديدة لتحديد العنصر النشط في القوائم المنسدلة
    public string IsActiveDropdownItem(string controller, string action)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        if (currentController == null || currentAction == null)
            return "flex items-center p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-primary-600 hover:text-white smooth-transition";

        return currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) &&
               currentAction.Equals(action, StringComparison.OrdinalIgnoreCase)
            ? "flex items-center p-2 rounded-lg bg-primary-600 text-white smooth-transition"
            : "flex items-center p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-primary-600 hover:text-white smooth-transition";
    }

    // New function to check multiple actions with the same controller
    public string IsActiveMultiAction(string controller, params string[] actions)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        if (currentController == null || currentAction == null)
            return "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-primary-600 hover:text-white transition";

        return currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) &&
               actions.Any(a => a.Equals(currentAction, StringComparison.OrdinalIgnoreCase))
            ? "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg transition bg-primary-600 text-white"
            : "sidebar-item flex items-center space-x-3 space-x-reverse p-3 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-primary-600 hover:text-white transition";
    }
}
