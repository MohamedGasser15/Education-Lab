        window.showAlert = function (type, message) {
            const alertContainer = document.createElement('div');
            alertContainer.className = `fixed top-4 left-4 z-50 px-5 py-3 rounded-md shadow-xl flex items-center transition-all duration-500 ease-[cubic-bezier(0.68,-0.55,0.27,1.55)] transform opacity-0 -translate-y-6 scale-95 ${
                type === 'success' ? 'bg-emerald-500 text-white' :
                type === 'error' ? 'bg-rose-500 text-white' :
                'bg-sky-500 text-white'
            } text-sm lg:text-lg lg:px-6 lg:py-4`;

            // أيقونة حسب النوع
            const icon = type === 'success' ?
                `<svg class="w-5 h-5 mr-2 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>` :
                type === 'error' ?
                `<svg class="w-5 h-5 mr-2 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>` :
                `<svg class="w-5 h-5 mr-2 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;

            // إنشاء شريط التقدم المتدرج
        const progressBar = document.createElement('div');
        // أبيض واضح بس مش قوي أوي
        progressBar.className = 'absolute bottom-0 left-0 right-0 h-1 bg-white bg-opacity-70 rounded-b-md overflow-hidden shadow';


            const progressBarInner = document.createElement('div');
            progressBarInner.className = 'h-full rounded-b-md';
            progressBarInner.style.background = type === 'success' ?
                'linear-gradient(90deg, rgba(16,185,129,1) 0%, rgba(110,231,183,1) 100%)' :
                type === 'error' ?
                'linear-gradient(90deg, rgba(239,68,68,1) 0%, rgba(252,165,165,1) 100%)' :
                'linear-gradient(90deg, rgba(14,165,233,1) 0%, rgba(125,211,252,1) 100%)';
            progressBarInner.style.width = '100%';
            progressBar.appendChild(progressBarInner);

            alertContainer.innerHTML = `
                ${icon}
                <span class="font-medium flex-1">${message}</span>
                <button class="ml-3 text-white opacity-70 hover:opacity-100 transition-opacity" onclick="fadeOutAlert(this.parentElement)">
                    <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            `;

            alertContainer.appendChild(progressBar);
            document.body.appendChild(alertContainer);

            // إظهار سلس مع تأثير زنبركي
            requestAnimationFrame(() => {
                alertContainer.classList.remove('opacity-0', '-translate-y-6', 'scale-95');
                alertContainer.classList.add('opacity-100', 'translate-y-0', 'scale-100');

                // بدء تحريك شريط التقدم المتدرج
                progressBarInner.style.transition = 'width 5s linear';
                setTimeout(() => {
                    progressBarInner.style.width = '0%';
                }, 50);
            });

            // الإخفاء التلقائي بعد 5 ثواني
            const autoHide = setTimeout(() => {
                fadeOutAlert(alertContainer);
            }, 5000);

            // إيقاف شريط التقدم عند التوقف فوق التنبيه
            alertContainer.addEventListener('mouseenter', () => {
                clearTimeout(autoHide);
                progressBarInner.style.transition = 'none';
            });

            // استئناف شريط التقدم عند مغادرة التنبيه
            alertContainer.addEventListener('mouseleave', () => {
                const currentWidth = parseFloat(progressBarInner.style.width || '100');
                const remainingTime = currentWidth * 50;

                progressBarInner.style.transition = `width ${remainingTime}ms linear`;
                progressBarInner.style.width = '0%';

                setTimeout(() => fadeOutAlert(alertContainer), remainingTime);
            });
        };

        // دالة للإخفاء السلس
        function fadeOutAlert(element) {
            if (!element) return;

            element.classList.remove('opacity-100', 'translate-y-0', 'scale-100');
            element.classList.add('opacity-0', '-translate-y-2', 'scale-95');

            setTimeout(() => {
                element.remove();
            }, 300);
        }
    </script>

    @if (TempData["Success"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showAlert('success', '@TempData["Success"]');
            });
        </script>
    }
    @if (TempData["Error"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                showAlert('error', '@TempData["Error"]');
            });
        </script>
    }
</body>
</html>