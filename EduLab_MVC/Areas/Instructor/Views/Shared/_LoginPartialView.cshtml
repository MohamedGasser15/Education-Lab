@using EduLab_Shared.Utitlites
@inject UserService _userService
@{
    var user = await _userService.GetCurrentUserAsync();
    var fullName = user?.FullName;
    var role = user?.Role;
    var profileImage = user?.ProfileImageUrl;

    if (!string.IsNullOrEmpty(profileImage) && !profileImage.StartsWith("http"))
    {
        var baseUrl = "https://localhost:7292/";
        profileImage = baseUrl.TrimEnd('/') + "/" + profileImage.TrimStart('/');
    }
}
<!-- User Profile with Enhanced Dropdown -->
<div class="p-4 border-b border-gray-200 dark:border-gray-700" x-data="{ open: false }" @@click.outside="open = false">
    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center overflow-hidden ring-2 ring-primary-500/20 hover:ring-primary-500/40 transition-all duration-300">
                @if (!string.IsNullOrEmpty(profileImage))
                {
                    <img src="@profileImage" alt="User" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                }
                else
                {
                    <img src="~/Img/User Logo.png" alt="User" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                }
            </div>
            <div class="mr-3 sidebar-text">
                <h3 class="font-medium text-gray-800 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">@fullName</h3>
                <p class="text-xs text-gray-500 dark:text-gray-400">@role</p>
            </div>
        </div>

        <!-- Dropdown Toggle Button -->
        <button @@click="open = !open"
                class="p-2 rounded-lg hover:bg-primary-100 dark:hover:bg-primary-900/30 transition-all duration-300 group"
                :class="{ 'bg-primary-100 dark:bg-primary-900/30': open }">
            <i class="fas fa-ellipsis-v text-gray-500 dark:text-gray-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200"
               :class="{ 'text-primary-600 dark:text-primary-400': open }"></i>
        </button>
    </div>

    <!-- Enhanced Dropdown Menu - Improved Version -->
    <div x-show="open"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 transform -translate-y-2 scale-95"
         x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
         x-transition:leave-end="opacity-0 transform -translate-y-2 scale-95"
         class="mt-2 bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-100 dark:border-gray-700 backdrop-blur-sm bg-white/95 dark:bg-gray-800/95 w-48 absolute right-4 z-50"
         style="display: none;">

        <a asp-area="Learner" asp-controller="Profile" asp-action="Instructor"
           class="flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-primary-50 dark:hover:bg-primary-900/20 hover:text-primary-700 dark:hover:text-primary-300 group/item transition-all duration-200 border-l-2 border-transparent hover:border-primary-500">
            <div class="w-6 h-6 rounded-md bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center group-hover/item:bg-primary-200 dark:group-hover/item:bg-primary-900/50 transition-colors duration-200 ml-2">
                <i class="fas fa-user-circle text-primary-600 dark:text-primary-400 text-xs"></i>
            </div>
            <span class="font-medium">الملف الشخصي</span>
        </a>

        <a asp-area="Learner" asp-controller="Settings" asp-action="Index"
           class="flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-primary-50 dark:hover:bg-primary-900/20 hover:text-primary-700 dark:hover:text-primary-300 group/item transition-all duration-200 border-l-2 border-transparent hover:border-primary-500">
            <div class="w-6 h-6 rounded-md bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center group-hover/item:bg-primary-200 dark:group-hover/item:bg-primary-900/50 transition-colors duration-200 ml-2">
                <i class="fas fa-cog text-primary-600 dark:text-primary-400 text-xs"></i>
            </div>
            <span class="font-medium">الإعدادات</span>
        </a>

        <div class="border-t border-gray-100 dark:border-gray-700 mx-2 my-1"></div>

        <form asp-area="Learner" asp-controller="Auth" asp-action="Logout" method="post">
            <button type="submit"
                    class="w-full text-left flex items-center px-3 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-700 dark:hover:text-red-300 group/item transition-all duration-200 border-l-2 border-transparent hover:border-red-500">
                <div class="w-6 h-6 rounded-md bg-red-100 dark:bg-red-900/20 flex items-center justify-center group-hover/item:bg-red-200 dark:group-hover/item:bg-red-900/30 transition-colors duration-200 ml-2">
                    <i class="fas fa-sign-out-alt text-red-600 dark:text-red-400 text-xs transform -scale-x-100"></i>
                </div>
                <span class="font-medium">تسجيل الخروج</span>
            </button>
        </form>
    </div>
</div>

<style>
    .backdrop-blur-sm {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .bg-white\/95 {
        background-color: rgba(255, 255, 255, 0.95);
    }

    .dark .dark\:bg-gray-800\/95 {
        background-color: rgba(31, 41, 55, 0.95);
    }
</style>