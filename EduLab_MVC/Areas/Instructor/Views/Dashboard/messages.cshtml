@{
    ViewData["Title"] = "الرسائل والأسئلة";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white">
            <i class="fas fa-envelope text-blue-600 dark:text-blue-400 mr-2"></i>
            الرسائل والأسئلة
        </h1>
        <div class="flex space-x-3 space-x-reverse">
            <select class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                <option value="all">جميع الرسائل</option>
                <option value="unread">غير المقروءة</option>
                <option value="read">المقروءة</option>
                <option value="important">مهمة</option>
            </select>
            <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                <i class="fas fa-filter mr-2"></i> تصفية
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- قائمة الرسائل -->
        <div class="lg:col-span-1 bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                <div class="relative">
                    <input type="text" placeholder="ابحث في الرسائل..."
                           class="w-full pr-10 pl-4 py-2 rounded-full border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                    <button class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 dark:text-gray-400">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="overflow-y-auto" style="max-height: 600px;">
                <!-- رسالة 1 -->
                <div class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer">
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="صورة المرسل">
                                </div>
                                <div class="mr-3">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">أحمد محمد</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">ahmed@example.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-gray-500 dark:text-gray-400">منذ ساعتين</span>
                        </div>
                        <div class="mt-2">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">استفسار عن دورة تطوير الويب</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400 truncate">هل هذه الدورة مناسبة للمبتدئين الذين ليس لديهم خبرة...</p>
                        </div>
                        <div class="mt-2 flex space-x-2 space-x-reverse">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                <i class="fas fa-graduation-cap mr-1"></i> دورة تطوير الويب
                            </span>
                        </div>
                    </div>
                </div>

                <!-- رسالة 2 -->
                <div class="border-b border-gray-200 dark:border-gray-700 bg-blue-50 dark:bg-blue-900 hover:bg-blue-100 dark:hover:bg-blue-800 cursor-pointer">
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="صورة المرسل">
                                </div>
                                <div class="mr-3">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">سارة علي</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">sara@example.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-gray-500 dark:text-gray-400">منذ يوم</span>
                        </div>
                        <div class="mt-2">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">مشكلة في الدفع</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400 truncate">عند محاولة الدفع تظهر لي رسالة خطأ...</p>
                        </div>
                        <div class="mt-2 flex space-x-2 space-x-reverse">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                                <i class="fas fa-exclamation-triangle mr-1"></i> مشكلة تقنية
                            </span>
                        </div>
                    </div>
                </div>

                <!-- رسالة 3 -->
                <div class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer">
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="صورة المرسل">
                                </div>
                                <div class="mr-3">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">محمد خالد</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">mohamed@example.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-gray-500 dark:text-gray-400">منذ 3 أيام</span>
                        </div>
                        <div class="mt-2">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">اقتراح لدورة جديدة</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400 truncate">أقترح إضافة دورة عن الذكاء الاصطناعي...</p>
                        </div>
                        <div class="mt-2 flex space-x-2 space-x-reverse">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                <i class="fas fa-lightbulb mr-1"></i> اقتراح
                            </span>
                        </div>
                    </div>
                </div>

                <!-- رسالة 4 -->
                <div class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer">
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="صورة المرسل">
                                </div>
                                <div class="mr-3">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">نورا أحمد</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">nora@example.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-gray-500 dark:text-gray-400">منذ أسبوع</span>
                        </div>
                        <div class="mt-2">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">استفسار عن الشهادة</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400 truncate">هل الشهادة معتمدة من جهات خارجية؟...</p>
                        </div>
                        <div class="mt-2 flex space-x-2 space-x-reverse">
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                                <i class="fas fa-certificate mr-1"></i> شهادة
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- محتوى الرسالة -->
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex justify-between items-start">
                    <div>
                        <h2 class="text-xl font-bold text-gray-800 dark:text-white">استفسار عن دورة تطوير الويب</h2>
                        <div class="flex items-center mt-2">
                            <div class="flex-shrink-0 h-10 w-10">
                                <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="صورة المرسل">
                            </div>
                            <div class="mr-3">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">أحمد محمد</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400">ahmed@example.com</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                        <span>منذ ساعتين</span>
                        <button class="ml-3 text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                </div>

                <div class="mt-6">
                    <div class="flex items-center mb-4">
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                            <i class="fas fa-graduation-cap mr-1"></i> دورة تطوير الويب
                        </span>
                    </div>

                    <div class="prose dark:prose-invert max-w-none">
                        <p>مرحبًا،</p>
                        <p>أنا مهتم بالتسجيل في دورة تطوير الويب ولكن لدي بعض الأسئلة:</p>
                        <ul>
                            <li>هل هذه الدورة مناسبة للمبتدئين الذين ليس لديهم خبرة سابقة في البرمجة؟</li>
                            <li>ما هي الأدوات التي أحتاج إلى تثبيتها قبل بدء الدورة؟</li>
                            <li>هل هناك مشاريع عملية سأقوم بتنفيذها خلال الدورة؟</li>
                        </ul>
                        <p>شكرًا لمساعدتك!</p>
                        <p>أحمد محمد</p>
                    </div>
                </div>
            </div>

            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">الرد على الرسالة</h3>
                <form>
                    <div class="mb-4">
                        <label for="response" class="sr-only">الرد</label>
                        <textarea id="response" rows="6" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="اكتب ردك هنا..."></textarea>
                    </div>
                    <div class="flex justify-between items-center">
                        <div class="flex space-x-2 space-x-reverse">
                            <button type="button" class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-paperclip"></i>
                            </button>
                            <button type="button" class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-smile"></i>
                            </button>
                        </div>
                        <div class="flex space-x-3 space-x-reverse">
                            <button type="button" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                                حفظ كمسودة
                            </button>
                            <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                                إرسال الرد
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    <script>
        // يمكنك إضافة أي JavaScript مخصص لهذه الصفحة هنا
        document.addEventListener('DOMContentLoaded', function() {
            // عند النقر على رسالة في القائمة
            const messageItems = document.querySelectorAll('.cursor-pointer');
            messageItems.forEach(item => {
                item.addEventListener('click', function() {
                    // إزالة التحديد من جميع الرسائل
                    messageItems.forEach(i => {
                        i.classList.remove('bg-blue-50', 'dark:bg-blue-900');
                        i.classList.add('hover:bg-gray-50', 'dark:hover:bg-gray-700');
                    });

                    // تحديد الرسالة المختارة
                    this.classList.add('bg-blue-50', 'dark:bg-blue-900');
                    this.classList.remove('hover:bg-gray-50', 'dark:hover:bg-gray-700');

                    // هنا يمكنك جلب محتوى الرسالة المحددة عبر AJAX وعرضها
                });
            });
        });
    </script>
