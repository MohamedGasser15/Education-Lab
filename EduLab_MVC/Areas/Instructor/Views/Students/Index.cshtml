@functions {
    private string GetInitials(string fullName)
    {
        if (string.IsNullOrEmpty(fullName))
            return "?";

        var names = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0][0].ToString().ToUpper();
        else
            return "?";
    }
}

@section Scripts {
    <script>
        // متغيرات عامة لنظام الإشعارات
        let allNotificationStudents = [];
        let selectedStudentIds = [];
        let currentNotificationType = 'bulk'; // 'bulk' or 'individual'
        let currentIndividualStudent = null;

        // ========== الدوال الأساسية للتحكم في المودالات ==========
        function showModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }
        }

        // ========== نظام الإشعارات ==========
        function showBulkNotificationModal() {
            currentNotificationType = 'bulk';
            selectedStudentIds = [];
            loadStudentsForNotification();
            updateNotificationUI();
            showModal('bulkNotificationModal');
        }

        function showIndividualNotificationModal(studentId, studentName) {
            currentNotificationType = 'individual';
            currentIndividualStudent = { id: studentId, name: studentName };
            selectedStudentIds = [studentId];
            loadStudentsForNotification();
            updateNotificationUI();
            showModal('bulkNotificationModal');
        }

        async function loadStudentsForNotification() {
            try {
                showLoading('studentsList', 'جاري تحميل قائمة الطلاب...');

                const queryString = selectedStudentIds.length > 0 ?
                    `?selectedStudentIds=${selectedStudentIds.join('&selectedStudentIds=')}` : '';

                const response = await fetch(`/Instructor/Students/get-students-for-notification${queryString}`);
                const result = await response.json();

                if (result.success) {
                    allNotificationStudents = result.data;
                    renderStudentsList();
                    updateStudentsCount();
                } else {
                    showAlert('error', 'فشل في تحميل قائمة الطلاب');
                }
            } catch (error) {
                console.error('Error loading students:', error);
                showAlert('error', 'حدث خطأ أثناء تحميل قائمة الطلاب');
            }
        }

        function renderStudentsList() {
            const container = document.getElementById('studentsList');

            if (allNotificationStudents.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4 text-gray-500 dark:text-gray-400">
                        <i class="fas fa-users text-2xl mb-2"></i>
                        <p>لا توجد طلاب</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = allNotificationStudents.map(student => `
                <div class="student-item flex items-center justify-between p-3 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
                    <div class="flex items-center space-x-3 space-x-reverse">
                        <div class="flex-shrink-0">
                            <div class="relative">
                                <img class="h-10 w-10 rounded-full object-cover"
                                     src="${student.profileImageUrl || '/images/default-avatar.png'}"
                                     alt="${student.fullName}"
                                     onerror="this.src='/images/default-avatar.png'">
                                ${student.isSelected ? `
                                    <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white dark:border-gray-800"></div>
                                ` : ''}
                            </div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                                ${student.fullName}
                            </p>
                            <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
                                ${student.email}
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox"
                               class="student-checkbox custom-checkbox"
                               value="${student.studentId}"
                               ${student.isSelected ? 'checked' : ''}
                               onchange="toggleStudentSelection('${student.studentId}', this.checked)"
                               ${currentNotificationType === 'individual' ? 'disabled' : ''}>
                    </div>
                </div>
            `).join('');
        }

        function toggleStudentSelection(studentId, isSelected) {
            if (isSelected) {
                if (!selectedStudentIds.includes(studentId)) {
                    selectedStudentIds.push(studentId);
                }
            } else {
                selectedStudentIds = selectedStudentIds.filter(id => id !== studentId);
            }

            updateStudentsCount();
            updateRecipientsCount();
        }

        function updateStudentsCount() {
            document.getElementById('totalStudentsCountModal').textContent = allNotificationStudents.length;
            document.getElementById('selectedStudentsCount').textContent = selectedStudentIds.length;
        }

        function updateRecipientsCount() {
            const count = currentNotificationType === 'individual' ?
                selectedStudentIds.length :
                (selectedStudentIds.length > 0 ? selectedStudentIds.length : allNotificationStudents.length);

            document.getElementById('recipientsCount').textContent = count;
        }

        function updateNotificationUI() {
            const title = document.getElementById('notificationTitle');
            const subtitle = document.getElementById('notificationSubtitle');
            const studentsColumn = document.getElementById('studentsColumn');
            const formColumn = document.getElementById('formColumn');

            if (currentNotificationType === 'individual') {
                title.textContent = 'إرسال إشعار فردي';
                subtitle.textContent = `إرسال إشعار إلى: ${currentIndividualStudent.name}`;
                // إخفاء قائمة الطلاب في الوضع الفردي
                if (studentsColumn) studentsColumn.classList.add('hidden');
                if (formColumn) {
                    formColumn.classList.remove('lg:col-span-2');
                    formColumn.classList.add('lg:col-span-3');
                }
            } else {
                title.textContent = 'إرسال إشعار جماعي';
                subtitle.textContent = 'إرسال إشعار إلى الطلاب';
                // إظهار قائمة الطلاب في الوضع الجماعي
                if (studentsColumn) studentsColumn.classList.remove('hidden');
                if (formColumn) {
                    formColumn.classList.remove('lg:col-span-3');
                    formColumn.classList.add('lg:col-span-2');
                }
            }

            updateRecipientsCount();
        }

        function showConfirmationModal() {
            const subject = document.getElementById('bulkNotificationSubject').value;
            const content = document.getElementById('bulkNotificationContent').value;

            if (!subject || !content) {
                showAlert('error', 'الرجاء ملء جميع الحقول المطلوبة');
                return;
            }

            if (subject.length > 200) {
                showAlert('error', 'عنوان الإشعار يجب ألا يتجاوز 200 حرف');
                return;
            }

            if (content.length > 2000) {
                showAlert('error', 'محتوى الإشعار يجب ألا يتجاوز 2000 حرف');
                return;
            }

            const recipientsCount = document.getElementById('recipientsCount').textContent;
            const studentText = recipientsCount === '1' ? 'طالب' : 'طالب';
            document.getElementById('confirmationMessage').textContent =
                `هل أنت متأكد من رغبتك في إرسال هذا الإشعار إلى ${recipientsCount} ${studentText}؟`;

            showModal('confirmationModal');
        }

        async function sendNotification() {
            const subject = document.getElementById('bulkNotificationSubject').value;
            const content = document.getElementById('bulkNotificationContent').value;
            const type = parseInt(document.getElementById('bulkNotificationType').value);
            const sendNotification = document.getElementById('sendNotification').checked;
            const sendEmail = document.getElementById('sendEmail').checked;

            const request = {
                Title: subject,
                Message: content,
                Type: type,
                StudentIds: currentNotificationType === 'individual' ? selectedStudentIds :
                           (selectedStudentIds.length > 0 ? selectedStudentIds : []),
                SendNotification: sendNotification,
                SendEmail: sendEmail
            };

            try {
                showLoadingInModal('جاري إرسال الإشعار...');

                const response = await fetch('/Instructor/Students/send-notification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(request)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('success', 'تم إرسال الإشعار بنجاح');

                    // إعادة تعيين النموذج
                    document.getElementById('bulkNotificationForm').reset();
                    selectedStudentIds = [];

                    // إغلاق المودالات
                    closeModal('confirmationModal');
                    closeModal('bulkNotificationModal');

                } else {
                    showAlert('error', result.message || 'فشل في إرسال الإشعار');
                    if (result.errors) {
                        console.error('Notification errors:', result.errors);
                    }
                }
            } catch (error) {
                console.error('Error sending notification:', error);
                showAlert('error', 'حدث خطأ أثناء إرسال الإشعار');
            } finally {
                resetLoadingInModal();
            }
        }



        // ========== دوال المودالات الأخرى ==========
        function showStudentDetails(studentId) {
            showModal('studentDetailsModal');
            loadStudentDetails(studentId);
        }

        function showMessageModal(studentId, fullName, email) {
            document.getElementById('messageTo').value = fullName + ' <' + email + '>';
            showModal('sendMessageModal');
        }

        function sendMessage() {
            const subject = document.getElementById('messageSubject').value;
            const content = document.getElementById('messageContent').value;

            if (!subject || !content) {
                showAlert('error', 'الرجاء ملء جميع الحقول');
                return;
            }

            // هنا يمكنك إضافة كود إرسال الرسالة عبر API
            showAlert('success', 'تم إرسال الرسالة بنجاح');
            closeModal('sendMessageModal');
            document.getElementById('messageForm').reset();
        }

        // ========== دوال مساعدة ==========
        function showLoading(elementId, message = 'جاري التحميل...') {
            const element = document.getElementById(elementId);
            if (element) {
                element.innerHTML = `
                    <div class="flex justify-center items-center py-8">
                        <div class="loading-spinner"></div>
                        <span class="mr-2 text-gray-500">${message}</span>
                    </div>
                `;
            }
        }

        function showLoadingInModal(message = 'جاري التحميل...') {
            const sendBtn = document.getElementById('sendBulkNotificationBtn');
            const confirmBtn = document.getElementById('confirmSendBtn');

            if (sendBtn) {
                sendBtn.innerHTML = `<div class="loading-spinner"></div> ${message}`;
                sendBtn.disabled = true;
            }
            if (confirmBtn) {
                confirmBtn.innerHTML = `<div class="loading-spinner"></div> ${message}`;
                confirmBtn.disabled = true;
            }
        }

        function resetLoadingInModal() {
            const sendBtn = document.getElementById('sendBulkNotificationBtn');
            const confirmBtn = document.getElementById('confirmSendBtn');

            if (sendBtn) {
                sendBtn.innerHTML = `<i class="fas fa-paper-plane mr-2"></i> إرسال الإشعار`;
                sendBtn.disabled = false;
            }
            if (confirmBtn) {
                confirmBtn.innerHTML = `<i class="fas fa-check mr-2"></i> تأكيد الإرسال`;
                confirmBtn.disabled = false;
            }
        }



        // ========== تحميل تفاصيل الطالب ==========
        async function loadStudentDetails(studentId) {
            try {
                const response = await fetch(`/Instructor/Students/details/${studentId}`);
                const result = await response.json();

                if (result.success && result.data) {
                    const studentDetails = result.data;
                    displayStudentDetails(studentDetails);
