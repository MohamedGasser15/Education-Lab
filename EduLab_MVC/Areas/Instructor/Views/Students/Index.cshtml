                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('studentDetailsContent').innerHTML = `
                    <div class="text-center py-8 text-red-500">
                        <i class="fas fa-exclamation-triangle text-3xl mb-2"></i>
                        <p>حدث خطأ في تحميل البيانات</p>
                    </div>
                `;
            }
        }

