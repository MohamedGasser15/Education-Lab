                                `<span class="px-2 py-1 text-xs rounded-full bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200">
                                    <i class="fas fa-circle mr-1 text-xs"></i>
                                    غير نشط
                                </span>`
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex items-center gap-2">
                                <button class="action-btn bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800 view-details" data-student-id="${student.id}">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="action-btn bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 hover:bg-green-200 dark:hover:bg-green-800 send-message" data-student-id="${student.id}">
                                    <i class="fas fa-envelope"></i>
                                </button>
                                <a href="/Instructor/Students/details/${student.id}" class="action-btn bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-300 hover:bg-purple-200 dark:hover:bg-purple-800 view-report">
                                    <i class="fas fa-chart-bar"></i>
                                </a>
                            </div>
                        </td>
                    `;

                    studentsTableBody.appendChild(row);
                });

                showingFrom.textContent = start + 1;
                showingTo.textContent = Math.min(end, filteredStudents.length);

                // إعادة إرفاق الأحداث للعناصر الجديدة
                attachRowEvents();
            }

            function getInitials(fullName) {
                if (!fullName) return '?';
                const names = fullName.split(' ').filter(name => name.length > 0);
                if (names.length >= 2) {
                    return (names[0][0] + names[1][0]).toUpperCase();
                } else if (names.length === 1) {
                    return names[0][0].toUpperCase();
                }
                return '?';
            }

            // إعداد الترقيم الصفحي
            function setupPagination() {
                const pageCount = Math.ceil(filteredStudents.length / rowsPerPage);
                paginationNumbers.innerHTML = '';

                if (pageCount <= 1) return;

                addPageButton(1);

                const startPage = Math.max(2, currentPage - 1);
                const endPage = Math.min(pageCount - 1, currentPage + 1);

                if (startPage > 2) {
                    paginationNumbers.innerHTML += '<span class="px-3 py-1">...</span>';
                }

                for (let i = startPage; i <= endPage; i++) {
                    addPageButton(i);
                }

                if (endPage < pageCount - 1) {
                    paginationNumbers.innerHTML += '<span class="px-3 py-1">...</span>';
                }

                if (pageCount > 1) {
                    addPageButton(pageCount);
                }

                updatePaginationButtons();
            }

            function addPageButton(pageNumber) {
                const pageButton = document.createElement('button');
                pageButton.className = `pagination-btn ${pageNumber === currentPage ? 'active' : ''}`;
                pageButton.textContent = pageNumber;
                pageButton.addEventListener('click', () => {
                    currentPage = pageNumber;
                    updateTable();
                    setupPagination();
                });
                paginationNumbers.appendChild(pageButton);
            }

            function updatePaginationButtons() {
                const pageCount = Math.ceil(filteredStudents.length / rowsPerPage);

                prevButton.disabled = currentPage === 1;
                nextButton.disabled = currentPage === pageCount || pageCount === 0;

                if (prevButton.disabled) {
                    prevButton.classList.add('disabled');
                } else {
                    prevButton.classList.remove('disabled');
                }

                if (nextButton.disabled) {
                    nextButton.classList.add('disabled');
                } else {
                    nextButton.classList.remove('disabled');
                }
            }

            // إرفاق الأحداث للصفوف
            function attachRowEvents() {
                // عرض تفاصيل الطالب
                document.querySelectorAll('.view-details').forEach(button => {
                    button.addEventListener('click', function(e) {
                        const studentId = this.getAttribute('data-student-id');
                        showStudentDetails(studentId);
                    });
                });

                // إرسال رسالة
                document.querySelectorAll('.send-message').forEach(button => {
                    button.addEventListener('click', function(e) {
                        const studentId = this.getAttribute('data-student-id');
                        const student = allStudents.find(s => s.id === studentId);
                        if (student) {
                            showMessageModal(student);
                        }
                    });
                });
            }

            // أحداث الفلترة والبحث
            searchInput.addEventListener('input', filterStudents);
            statusFilter.addEventListener('change', filterStudents);
            resetFiltersBtn.addEventListener('click', function() {
                searchInput.value = '';
                courseFilter.value = '';
                statusFilter.value = '';
                filterStudents();
            });

            // تغيير عدد الصفوف لكل صفحة
            rowsPerPageSelect.addEventListener('change', function() {
                rowsPerPage = parseInt(this.value);
                currentPage = 1;
                updateTable();
                setupPagination();
            });

            // أحداث الترقيم الصفحي
            prevButton.addEventListener('click', () => {
                if (currentPage > 1) {
                    currentPage--;
                    updateTable();
                    setupPagination();
                }
            });

            nextButton.addEventListener('click', () => {
                const pageCount = Math.ceil(filteredStudents.length / rowsPerPage);
                if (currentPage < pageCount) {
                    currentPage++;
                    updateTable();
                    setupPagination();
                }
            });

            // Bulk Actions
            const bulkActionsContainer = document.getElementById('bulkActionsContainer');
            const selectAllCheckbox = document.getElementById('selectAll');
            let rowCheckboxes = [];
            const selectedCountSpan = document.getElementById('selectedCount');
            const bulkActionSelect = document.getElementById('bulkAction');
            const applyBulkActionBtn = document.getElementById('applyBulkAction');

            function updateSelectedCount() {
                rowCheckboxes = document.querySelectorAll('.row-checkbox');
                const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;
                selectedCountSpan.textContent = selectedCount;

                if (selectedCount > 0) {
                    bulkActionsContainer.classList.remove('hidden');
                    selectAllCheckbox.checked = selectedCount === rowCheckboxes.length;
                } else {
                    bulkActionsContainer.classList.add('hidden');
                    selectAllCheckbox.checked = false;
                }
            }

            selectAllCheckbox.addEventListener('change', function() {
                const isChecked = this.checked;
                rowCheckboxes.forEach(checkbox => {
                    checkbox.checked = isChecked;
                });
                updateSelectedCount();
            });

            // تحديث الأحداث عند تغيير الجدول
            function updateRowCheckboxes() {
                rowCheckboxes = document.querySelectorAll('.row-checkbox');
                rowCheckboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', updateSelectedCount);
                });
            }

            function updateSelectedCount() {
                const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;
                selectedCountSpan.textContent = selectedCount;

                if (selectedCount > 0) {
                    bulkActionsContainer.classList.remove('hidden');
                    selectAllCheckbox.checked = selectedCount === rowCheckboxes.length;
                } else {
                    bulkActionsContainer.classList.add('hidden');
                    selectAllCheckbox.checked = false;
