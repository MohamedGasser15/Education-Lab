@functions {
    private string GetInitials(string fullName)
    {
        if (string.IsNullOrEmpty(fullName))
            return "?";

        var names = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0][0].ToString().ToUpper();
        else
            return "?";
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // تهيئة المتغيرات العامة
            let rowsPerPage = 10;
            let currentPage = 1;
            let allStudents = @Html.Raw(Json.Serialize(Model));
            let filteredStudents = allStudents;
            const totalStudents = document.getElementById('total-students');
            const showingFrom = document.getElementById('showing-from');
            const showingTo = document.getElementById('showing-to');
            const paginationNumbers = document.getElementById('pagination-numbers');
            const prevButton = document.getElementById('prev-page');
            const nextButton = document.getElementById('next-page');
            const searchInput = document.getElementById('searchInput');
            const courseFilter = document.getElementById('courseFilter');
            const statusFilter = document.getElementById('statusFilter');
            const resetFiltersBtn = document.getElementById('resetFilters');
            const rowsPerPageSelect = document.getElementById('rows-per-page');
            const studentsTableBody = document.getElementById('studentsTableBody');

            // فلترة الطلاب
            function filterStudents() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;

                filteredStudents = allStudents.filter(student => {
                    const matchesSearch = student.fullName.toLowerCase().includes(searchTerm) ||
                                         student.email.toLowerCase().includes(searchTerm) ||
                                         (student.phoneNumber && student.phoneNumber.includes(searchTerm));

                    let matchesStatus = true;
                    if (statusValue === 'active') {
                        matchesStatus = student.isActive;
                    } else if (statusValue === 'inactive') {
                        matchesStatus = !student.isActive;
                    } else if (statusValue === 'completed') {
                        // يمكن إضافة منطق للدورات المكتملة لاحقاً
                        matchesStatus = true;
                    }

                    return matchesSearch && matchesStatus;
                });

                totalStudents.textContent = filteredStudents.length;
                currentPage = 1;
                updateTable();
                setupPagination();
            }

            // تحديث الجدول
            function updateTable() {
                const start = (currentPage - 1) * rowsPerPage;
                const end = start + rowsPerPage;
                const currentStudents = filteredStudents.slice(start, end);

                studentsTableBody.innerHTML = '';

                if (currentStudents.length === 0) {
                    studentsTableBody.innerHTML = `
                        <tr>
                            <td colspan="7" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
                                <i class="fas fa-users text-3xl mb-2 text-gray-300"></i>
                                <p>لا توجد نتائج للبحث</p>
                            </td>
