        // دوال مساعدة
        function getInitials(fullName) {
            if (!fullName) return '?';
            const names = fullName.split(' ').filter(name => name.length > 0);
            if (names.length >= 2) {
                return (names[0][0] + names[1][0]).toUpperCase();
            } else if (names.length === 1) {
                return names[0][0].toUpperCase();
            }
            return '?';
        }

        function getStatusBadgeClass(status) {
            switch(status?.toLowerCase()) {
                case 'active': return 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200';
                case 'completed': return 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200';
                case 'inactive': return 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200';
                default: return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200';
            }
        }

        function getStatusText(status) {
            switch(status?.toLowerCase()) {
                case 'active': return 'نشط';
                case 'completed': return 'مكتمل';
                case 'inactive': return 'غير نشط';
                default: return status || 'غير معروف';
            }
        }

        function getActivityIcon(type) {
            switch(type?.toLowerCase()) {
                case 'enrollment': return 'fas fa-user-plus';
                case 'completion': return 'fas fa-check-circle';
                case 'video': return 'fas fa-play-circle';
                case 'quiz': return 'fas fa-question-circle';
                case 'certificate': return 'fas fa-award';
                default: return 'fas fa-bell';
            }
        }

        function getActivityIconClass(type) {
            switch(type?.toLowerCase()) {
                case 'enrollment': return 'bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300';
                case 'completion': return 'bg-green-100 text-green-600 dark:bg-green-900 dark:text-green-300';
                case 'video': return 'bg-purple-100 text-purple-600 dark:bg-purple-900 dark:text-purple-300';
                case 'quiz': return 'bg-orange-100 text-orange-600 dark:bg-orange-900 dark:text-orange-300';
                case 'certificate': return 'bg-yellow-100 text-yellow-600 dark:bg-yellow-900 dark:text-yellow-300';
                default: return 'bg-gray-100 text-gray-600 dark:bg-gray-900 dark:text-gray-300';
            }
        }

        // عرض مودال الرسالة
        function showMessageModal(studentId, fullName, email) {
            console.log('Showing message modal for:', fullName);
            document.getElementById('messageTo').value = fullName + ' <' + email + '>';
            showModal('sendMessageModal');
        }

        // عرض مودال الإشعار الجماعي
        function showBulkNotificationModal() {
            console.log('Showing bulk notification modal');
            document.getElementById('recipientsCount').value = 'جميع الطلاب';
            showModal('bulkNotificationModal');
        }

        // إرسال الرسالة
        function sendMessage() {
            const subject = document.getElementById('messageSubject').value;
            const content = document.getElementById('messageContent').value;

            if (!subject || !content) {
                alert('الرجاء ملء جميع الحقول');
                return;
            }

            alert('تم إرسال الرسالة بنجاح!');
            closeModal('sendMessageModal');

            // تنظيف الحقول
            document.getElementById('messageSubject').value = '';
            document.getElementById('messageContent').value = '';
        }

        // إرسال الإشعار الجماعي
        function sendBulkNotification() {
            const subject = document.getElementById('bulkNotificationSubject').value;
            const content = document.getElementById('bulkNotificationContent').value;
            const sendEmail = document.getElementById('sendEmail').checked;

            if (!subject || !content) {
                alert('الرجاء ملء جميع الحقول');
                return;
            }

            alert('تم إرسال الإشعار الجماعي بنجاح!');
            closeModal('bulkNotificationModal');

            // تنظيف الحقول
            document.getElementById('bulkNotificationSubject').value = '';
            document.getElementById('bulkNotificationContent').value = '';
        }

        // إغلاق المودال بالضغط خارجها
        document.addEventListener('DOMContentLoaded', function() {
            const modals = document.querySelectorAll('.modal-overlay');
            modals.forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.classList.add('hidden');
                    }
                });
            });

            // إضافة أحداث إغلاق المودالات
            document.getElementById('closeDetailsModal')?.addEventListener('click', () => {
                closeModal('studentDetailsModal');
            });

            document.getElementById('closeDetailsModalBtn')?.addEventListener('click', () => {
                closeModal('studentDetailsModal');
            });

            document.getElementById('closeMessageModal')?.addEventListener('click', () => {
                closeModal('sendMessageModal');
            });

            document.getElementById('cancelMessageBtn')?.addEventListener('click', () => {
                closeModal('sendMessageModal');
            });

            document.getElementById('closeBulkNotificationModal')?.addEventListener('click', () => {
                closeModal('bulkNotificationModal');
            });

            document.getElementById('cancelBulkNotificationBtn')?.addEventListener('click', () => {
                closeModal('bulkNotificationModal');
            });

            // إضافة event listeners للأزرار الأخرى
            document.getElementById('sendBulkNotification')?.addEventListener('click', showBulkNotificationModal);
            document.getElementById('sendMessageBtn')?.addEventListener('click', sendMessage);
            document.getElementById('sendBulkNotificationBtn')?.addEventListener('click', sendBulkNotification);
        });
    </script>
}