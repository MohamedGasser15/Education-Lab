            const content = document.getElementById('studentDetailsContent');

            if (!studentDetails || !studentDetails.student) {
                content.innerHTML = `
                    <div class="text-center py-8 text-red-500">
                        <i class="fas fa-exclamation-triangle text-3xl mb-2"></i>
                        <p>بيانات الطالب غير متوفرة</p>
                    </div>
                `;
                return;
            }

            const student = studentDetails.student;
            const enrollments = studentDetails.enrollments || [];
            const statistics = studentDetails.statistics || {};
            const recentActivities = studentDetails.recentActivities || [];

            content.innerHTML = `
