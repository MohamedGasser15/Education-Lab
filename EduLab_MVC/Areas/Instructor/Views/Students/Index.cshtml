                        <div class="detail-card">
                            <div class="detail-label">آخر تسجيل دخول</div>
                            <div class="detail-value">${student.lastLogin ? new Date(student.lastLogin).toLocaleDateString('ar-EG') : 'غير متوفر'}</div>
                        </div>
                        <div class="detail-card">
                            <div class="detail-label">الحالة</div>
                            <div class="detail-value">
                                <span class="px-2 py-1 text-xs rounded-full ${student.isActive ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'}">
                                    ${student.isActive ? 'نشط' : 'غير نشط'}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- الإحصائيات -->
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value total">${statistics.totalEnrollments || 0}</div>
                            <div class="stat-label">إجمالي التسجيلات</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value completed">${statistics.completedCourses || 0}</div>
                            <div class="stat-label">دورات مكتملة</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value progress">${(statistics.averageProgress || 0).toFixed(1)}%</div>
                            <div class="stat-label">متوسط التقدم</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value grade">${statistics.averageGrade || 0}</div>
                            <div class="stat-label">متوسط الدرجات</div>
                        </div>
                    </div>

                    <!-- الدورات المسجل فيها -->
                    <div>
                        <h3 class="section-title">الدورات المسجل فيها</h3>
                        <div class="space-y-4">
                            ${enrollments.length > 0 ?
                                enrollments.map(enrollment => `
                                    <div class="course-item">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-4 space-x-reverse">
                                                ${enrollment.courseThumbnailUrl ?
                                                    `<img class="h-12 w-16 object-cover rounded" src="${enrollment.courseThumbnailUrl}" alt="${enrollment.courseTitle || 'دورة'}">` :
                                                    `<div class="h-12 w-16 bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center">
                                                        <i class="fas fa-book text-gray-400"></i>
                                                    </div>`
                                                }
                                                <div>
                                                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">${enrollment.courseTitle || 'دورة بدون عنوان'}</h4>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                        مسجل في: ${enrollment.enrolledAt ? new Date(enrollment.enrolledAt).toLocaleDateString('ar-EG') : 'غير معروف'}
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="text-right">
                                                <div class="text-sm font-medium text-gray-900 dark:text-white">${(enrollment.progressPercentage || 0).toFixed(1)}%</div>
                                                <div class="progress-bar-container">
                                                    <div class="progress-bar" style="width: ${enrollment.progressPercentage || 0}%;"></div>
                                                </div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                    ${enrollment.completedLectures || 0} / ${enrollment.totalLectures || 0} محاضرة
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-3 flex items-center justify-between">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusBadgeClass(enrollment.status)}">
                                                ${getStatusText(enrollment.status)}
                                            </span>
                                            ${enrollment.lastActivity ?
                                                `<span class="text-xs text-gray-500 dark:text-gray-400">
                                                    آخر نشاط: ${new Date(enrollment.lastActivity).toLocaleDateString('ar-EG')}
                                                </span>` : ''
                                            }
                                        </div>
                                    </div>
                                `).join('') :
                                `<div class="text-center py-8 text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-book-open text-2xl mb-2"></i>
                                    <p>لا توجد دورات مسجل فيها</p>
                                </div>`
                            }
                        </div>
                    </div>

                    <!-- الأنشطة الحديثة -->
                    <div>
                        <h3 class="section-title">الأنشطة الحديثة</h3>
                        <div class="space-y-3">
                            ${recentActivities.length > 0 ?
                                recentActivities.map(activity => `
                                    <div class="activity-item ${activity.type || 'default'}">
                                        <div class="flex items-start space-x-3 space-x-reverse">
                                            <div class="flex-shrink-0">
                                                <div class="w-8 h-8 rounded-full ${getActivityIconClass(activity.type)} flex items-center justify-center">
                                                    <i class="${getActivityIcon(activity.type)} text-sm"></i>
                                                </div>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm text-gray-900 dark:text-white">${activity.description || 'نشاط غير معروف'}</p>
                                                <div class="mt-1 flex items-center space-x-2 space-x-reverse">
                                                    <span class="text-xs text-gray-500 dark:text-gray-400">
                                                        ${activity.activityDate ? new Date(activity.activityDate).toLocaleDateString('ar-EG') : 'غير معروف'}
                                                    </span>
                                                    ${activity.courseTitle ?
                                                        `<span class="text-xs text-blue-600 dark:text-blue-400">${activity.courseTitle}</span>` : ''
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                `).join('') :
                                `<div class="text-center py-8 text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-history text-2xl mb-2"></i>
                                    <p>لا توجد أنشطة حديثة</p>
                                </div>`
                            }
                        </div>
                    </div>
                </div>
            `;
        }

        // الدوال المساعدة للعرض
        function getStatusBadgeClass(status) {
            if (!status) return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200';

            switch(status.toLowerCase()) {
                case 'active':
                case 'نشط':
                    return 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200';
                case 'completed':
                case 'مكتمل':
                    return 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200';
                case 'inactive':
                case 'غير نشط':
                    return 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200';
                default:
                    return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200';
            }
        }

        function getStatusText(status) {
            if (!status) return 'غير معروف';

            switch(status.toLowerCase()) {
                case 'active': return 'نشط';
                case 'completed': return 'مكتمل';
                case 'inactive': return 'غير نشط';
                default: return status;
            }
        }

        function getActivityIcon(type) {
            if (!type) return 'fas fa-bell';

            switch(type.toLowerCase()) {
                case 'enrollment':
                case 'تسجيل':
                    return 'fas fa-user-plus';
                case 'completion':
                case 'إكمال':
                    return 'fas fa-check-circle';
                case 'video':
                case 'فيديو':
                    return 'fas fa-play-circle';
                case 'quiz':
                case 'اختبار':
                    return 'fas fa-question-circle';
                case 'certificate':
                case 'شهادة':
                    return 'fas fa-award';
                default:
                    return 'fas fa-bell';
            }
        }

        function getActivityIconClass(type) {
            if (!type) return 'bg-gray-100 text-gray-600 dark:bg-gray-900 dark:text-gray-300';

            switch(type.toLowerCase()) {
                case 'enrollment':
                case 'تسجيل':
                    return 'bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300';
                case 'completion':
                case 'إكمال':
                    return 'bg-green-100 text-green-600 dark:bg-green-900 dark:text-green-300';
                case 'video':
                case 'فيديو':
                    return 'bg-purple-100 text-purple-600 dark:bg-purple-900 dark:text-purple-300';
                case 'quiz':
                case 'اختبار':
                    return 'bg-orange-100 text-orange-600 dark:bg-orange-900 dark:text-orange-300';
                case 'certificate':
                case 'شهادة':
                    return 'bg-yellow-100 text-yellow-600 dark:bg-yellow-900 dark:text-yellow-300';
                default:
                    return 'bg-gray-100 text-gray-600 dark:bg-gray-900 dark:text-gray-300';
            }
        }

        // ========== أحداث الصفحة الرئيسية ==========
        document.addEventListener('DOMContentLoaded', function() {
            // زر الإشعار الجماعي في الأعلى
            document.getElementById('sendBulkNotification')?.addEventListener('click', showBulkNotificationModal);

            // إغلاق المودال بالضغط على ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal('bulkNotificationModal');
                    closeModal('confirmationModal');
                    closeModal('studentDetailsModal');
                    closeModal('sendMessageModal');
                }
            });

            // إغلاق المودال بالضغط خارج المحتوى
            document.querySelectorAll('.modal-overlay').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeModal(this.id);
                    }
                });
            });
        });
    </script>
}